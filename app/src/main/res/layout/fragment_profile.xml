<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_10sdp">

        <com.universalsompo.meta.metaapp.utilities.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Personal"
            android:typeface="serif"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:textColor="@color/lightblack"
            android:textSize="@dimen/_14sdp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:backgroundTint="@color/white"
            card_view:cardUseCompatPadding="true"
            app:cardCornerRadius="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            card_view:cardPreventCornerOverlap="true"
            app:contentPadding="@dimen/_3sdp"
            android:elevation="@dimen/_5sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:gravity="center"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:orientation="horizontal"
                        android:weightSum="1">
                        <ImageView
                            android:id="@+id/user_img"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_centerInParent="true"
                            android:clickable="false"
                            android:src="@drawable/dummy" />
                        <ImageView
                            android:id="@+id/edit_userimg"
                            android:layout_width="@dimen/_22sdp"
                            android:layout_height="@dimen/_22sdp"
                            android:layout_alignBottom="@+id/user_img"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="@dimen/_14sdp"
                            android:layout_marginEnd="@dimen/_2sdp"
                            android:background="@drawable/white_circle_with_green_border"
                            android:padding="@dimen/_5sdp"
                            android:src="@drawable/camera_icon"
                            app:tint="@color/tab_icons" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:paddingStart="@dimen/_5sdp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center|left"
                        android:padding="@dimen/_3sdp">
                        <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Full Name"
                            android:textColor="@color/lightblack"
                            android:textSize="@dimen/_10sdp"
                            android:typeface="serif" />
                        <EditText
                            android:id="@+id/edt_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:textColor="@color/lightblack"
                            android:textSize="@dimen/_12sdp"
                            android:typeface="serif" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center|left"
                        android:padding="@dimen/_3sdp">
                        <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date of Birth"
                            android:textColor="@color/lightblack"
                            android:textSize="@dimen/_10sdp"
                            android:typeface="serif" />
                        <EditText
                            android:id="@+id/edt_dob"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:cursorVisible="false"
                            android:textColor="@color/lightblack"
                            android:textSize="@dimen/_12sdp"
                            android:clickable="false"
                            android:typeface="serif" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.70"
            android:orientation="vertical">

            <com.universalsompo.meta.metaapp.utilities.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact"
                android:typeface="serif"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:textColor="@color/lightblack"
                android:textSize="@dimen/_14sdp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:backgroundTint="@color/white"
                card_view:cardUseCompatPadding="true"
                app:cardCornerRadius="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                card_view:cardPreventCornerOverlap="true"
                app:contentPadding="@dimen/_3sdp"
                android:elevation="@dimen/_5sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center|left"
                        android:padding="@dimen/_3sdp">
                        <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email Address"
                            android:textColor="@color/lightblack"
                            android:textSize="@dimen/_10sdp"
                            android:typeface="serif" />
                        <EditText
                            android:id="@+id/edt_email"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.70"
                            android:enabled="false"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:textColor="@color/lightblack"
                            android:textSize="@dimen/_12sdp"
                            android:typeface="serif" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center|left"
                                android:padding="@dimen/_3sdp">
                                <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Mobile Number"
                                    android:textColor="@color/lightblack"
                                    android:textSize="@dimen/_10sdp"
                                    android:typeface="serif" />
                                <EditText
                                    android:id="@+id/edt_mob"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:enabled="false"
                                    android:textColor="@color/lightblack"
                                    android:textSize="@dimen/_12sdp"
                                    android:typeface="serif" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center|left"
                                android:padding="@dimen/_3sdp">
                                <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Landline"
                                    android:textColor="@color/lightblack"
                                    android:textSize="@dimen/_10sdp"
                                    android:typeface="serif" />
                                <EditText
                                    android:id="@+id/edt_landline"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:enabled="false"
                                    android:inputType="number"
                                    android:maxLength="12"
                                    android:textColor="@color/lightblack"
                                    android:textSize="@dimen/_12sdp"
                                    android:typeface="serif" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <com.universalsompo.meta.metaapp.utilities.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:typeface="serif"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:textColor="@color/lightblack"
                android:textSize="@dimen/_14sdp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:backgroundTint="@color/white"
                card_view:cardUseCompatPadding="true"
                app:cardCornerRadius="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                card_view:cardPreventCornerOverlap="true"
                app:contentPadding="@dimen/_3sdp"
                android:elevation="@dimen/_5sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center|left"
                        android:padding="@dimen/_3sdp">
                        <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Address line 1"
                            android:textColor="@color/lightblack"
                            android:textSize="@dimen/_10sdp"
                            android:typeface="serif" />
                        <EditText
                            android:id="@+id/edt_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:inputType="text"
                            android:digits="0123456789-.,qwertzuiopasdfghjklyxcvbnmQWERTYUIOPLKJHGFDSAZXCVBNM"
                            android:textColor="@color/lightblack"
                            android:textSize="@dimen/_12sdp"
                            android:typeface="serif" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center|left"
                            android:paddingEnd="@dimen/_3sdp"
                            android:layout_weight="0.5"
                            android:padding="@dimen/_3sdp">
                            <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="State"
                                android:textColor="@color/lightblack"
                                android:textSize="@dimen/_10sdp"
                                android:typeface="serif" />
                            <Spinner
                                android:id="@+id/spn_state"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_25sdp"
                                android:enabled="false"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:background="@android:color/transparent"
                                android:drawableRight="@drawable/dropdown_icon"
                                android:text="UP"
                                android:textSize="@dimen/_12sdp" />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:background="@color/lightblack"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center|left"
                            android:layout_weight="0.5"
                            android:paddingStart="@dimen/_3sdp"
                            android:padding="@dimen/_3sdp">
                            <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="City"
                                android:textColor="@color/lightblack"
                                android:textSize="@dimen/_10sdp"
                                android:typeface="serif" />
                            <Spinner
                                android:id="@+id/spn_city"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_25sdp"
                                android:enabled="false"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:background="@android:color/transparent"
                                android:drawableRight="@drawable/dropdown_icon"
                                android:text="Noida"
                                android:textSize="@dimen/_12sdp" />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginEnd="@dimen/_3sdp"
                                android:background="@color/lightblack"/>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center|left"
                        android:padding="@dimen/_3sdp">
                        <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pincode"
                            android:textColor="@color/lightblack"
                            android:textSize="@dimen/_10sdp"
                            android:typeface="serif" />
                        <EditText
                            android:id="@+id/edt_pincode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:inputType="number"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:maxLength="6"
                            android:textColor="@color/lightblack"
                            android:textSize="@dimen/_12sdp"
                            android:typeface="serif" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>

</ScrollView>