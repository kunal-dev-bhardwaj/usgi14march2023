<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/_8sdp"
        android:paddingEnd="@dimen/_8sdp"
        android:paddingTop="@dimen/_8sdp"
        android:id="@+id/status">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardview1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:elevation="@dimen/_5sdp"
            card_view:cardCornerRadius="@dimen/_2sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_5sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:orientation="vertical">
                <com.universalsompo.meta.metaapp.utilities.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/insurer_name"
                    android:textColor="@color/tabular_text_heading"
                    android:text="Bharti Axa"
                    android:textSize="@dimen/_12sdp"
                    android:typeface="serif"/>
                <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/holder_name"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/lightblack"
                    android:text="Anirudh Agarwal"
                    android:textSize="@dimen/_10sdp"
                    android:typeface="serif"/>
                <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/policy_no"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/lightblack"
                    android:text="QWERTY-ASD-123456"
                    android:textSize="@dimen/_10sdp"
                    android:typeface="serif"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/background"
                    android:layout_marginTop="@dimen/_5sdp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:weightSum="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="0.5">
                        <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/make_model"
                            android:gravity="center|left"
                            android:paddingStart="@dimen/_3sdp"
                            android:textColor="@color/lightblack"
                            android:text="Hyundai i10"
                            android:textSize="@dimen/_10sdp"
                            android:typeface="serif"/>
                        <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/reg_no"
                            android:textColor="@color/lightblack"
                            android:text="DL3CBV0132"
                            android:gravity="center|left"
                            android:paddingStart="@dimen/_3sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textSize="@dimen/_10sdp"
                            android:typeface="serif"/>
                        <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/policy_expiry_date"
                            android:textColor="@color/lightblack"
                            android:text="13/01/2017"
                            android:gravity="center|left"
                            android:paddingStart="@dimen/_3sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textSize="@dimen/_10sdp"
                            android:typeface="serif"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="0.5">
                        <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/ref_no"
                            android:textColor="@color/lightblack"
                            android:text="Qwerty"
                            android:gravity="center|left"
                            android:paddingStart="@dimen/_3sdp"
                            android:textSize="@dimen/_10sdp"
                            android:typeface="serif"/>
                        <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/claim_applied_date"
                            android:textColor="@color/lightblack"
                            android:text="28/12/2016"
                            android:gravity="center|left"
                            android:paddingStart="@dimen/_3sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textSize="@dimen/_10sdp"
                            android:typeface="serif"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            card_view:cardCornerRadius="@dimen/_2sdp"
            android:layout_below="@+id/cardview1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <com.universalsompo.meta.metaapp.utilities.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.30"
                        android:padding="@dimen/_8sdp"
                        android:text="Updated on"
                        android:textColor="@color/tabular_text_heading"
                        android:textSize="@dimen/_11sdp"
                        android:typeface="serif" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/grey" />

                    <com.universalsompo.meta.metaapp.utilities.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.70"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_8sdp"
                        android:scrollbars="none"
                        android:text="Status"
                        android:textColor="@color/tabular_text_heading"
                        android:textSize="@dimen/_11sdp"
                        android:typeface="serif" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/grey" />
                <ListView
                    android:id="@+id/listview_status"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="#1A000000"
                    android:dividerHeight="@dimen/_1sdp"
                    android:overScrollMode="never"
                    android:scrollbars="none"></ListView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</LinearLayout>