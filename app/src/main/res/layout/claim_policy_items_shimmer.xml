<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_marginEnd="@dimen/_3sdp"
        android:elevation="@dimen/_5sdp"
        android:padding="@dimen/_3sdp"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="@dimen/_3sdp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/whole_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
                <LinearLayout
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_38sdp"
                    android:background="@color/lightish_grey"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/vehcle_type_img"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.12"
                        android:padding="@dimen/_4sdp"
                        android:layout_gravity="center"
                        android:alpha="0.7"
                        android:background="@color/grey" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.78"
                        android:gravity="center|left"
                        android:orientation="vertical">
                        <com.universalsompo.meta.metaapp.utilities.CustomTextView
                            android:id="@+id/claim_policy_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/_8sdp"
                            android:text="Bharti Exa"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold"
                            android:typeface="serif"
                            android:background="@color/grey"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_below="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:weightSum="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:gravity="center|left"
                        android:orientation="vertical">
                        <com.universalsompo.meta.metaapp.utilities.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Policy Number"
                            android:textStyle="bold"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/_10sdp"
                            android:typeface="serif"
                            android:background="@color/grey"/>

                        <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                            android:id="@+id/claim_policy_policy_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1111111111"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/_12sdp"
                            android:typeface="serif"
                            android:background="@color/grey"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:gravity="center"
                        android:orientation="vertical">
                        <com.universalsompo.meta.metaapp.utilities.CustomTextView
                            android:id="@+id/expiry_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Expiring in"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/_10sdp"
                            android:typeface="serif"
                            android:background="@color/grey"/>

                        <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                            android:id="@+id/helper_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:text="1111111111"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/_10sdp"
                            android:typeface="serif"
                            android:background="@color/grey"/>
                    </LinearLayout>
                </LinearLayout>
                <com.universalsompo.meta.metaapp.utilities.CustomTextView
                    android:id="@+id/claim_company_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/policy_data"
                    android:padding="@dimen/_5sdp"
                    android:text="1111111111"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/_11sdp"
                    android:typeface="serif"
                    android:background="@color/grey"/>
                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/grey"
                    android:layout_below="@+id/tv_insurancecompany"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view1"
                    android:padding="@dimen/_5sdp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                            android:id="@+id/fullname"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingStart="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_5sdp"
                            android:text="88888888888"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/_11sdp"
                            android:typeface="serif"
                            android:background="@color/grey"/>
                    </LinearLayout>
                    <View
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="match_parent"
                        android:background="@color/grey"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                            android:id="@+id/claim_policy_reg_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="88888888888"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/_11sdp"
                            android:typeface="serif"
                            android:background="@color/grey"/>
                    </LinearLayout>
                    <View
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="match_parent"
                        android:background="@color/grey"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <com.universalsompo.meta.metaapp.utilities.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Expiry date"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold"
                            android:typeface="serif"
                            android:background="@color/grey"/>

                        <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                            android:id="@+id/claim_policy_exp_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:text="25/25/2016"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/_10sdp"
                            android:typeface="serif"
                            android:background="@color/grey"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/grey"
                    android:layout_below="@+id/tv_insurancecompany"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/track_status_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:gravity="center"
                android:layout_below="@+id/whole_layout2"
                android:padding="@dimen/_8sdp"
                android:orientation="vertical">
                <com.universalsompo.meta.metaapp.utilities.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="-- Track Claim --"
                    android:textAllCaps="false"
                    android:textColor="@color/grey"
                    android:background="@color/grey"
                    android:textSize="@dimen/_12sdp"
                    android:typeface="serif" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>