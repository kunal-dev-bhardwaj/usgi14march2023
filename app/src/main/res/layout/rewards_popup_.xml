<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_220sdp"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:background="@drawable/rounded_corner_white_sos"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_12sdp">

        <com.universalsompo.meta.metaapp.utilities.CustomTextView
            android:id="@+id/alert_heading"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_1sdp"
            android:gravity="center"
            android:text="Get Earn &amp; Burn Rewards"
            android:textColor="@color/lightblack"
            android:textSize="@dimen/_12sdp"
            android:typeface="serif" />


        <LinearLayout
            android:layout_marginStart="@dimen/_10sdp"
            android:visibility="visible"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:id="@+id/liner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:text="Reward Points :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/rewardPointText"
                android:paddingStart="@dimen/_5sdp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/red_new"
                android:textSize="@dimen/_12sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

        </LinearLayout>



        <LinearLayout

            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_6sdp"
                android:alpha="0.7"
                android:background="@drawable/rounded_corner_call_sos"
                android:orientation="vertical">
                <com.universalsompo.meta.metaapp.utilities.CustomTextView
                    android:id="@+id/earn_dialog"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Earn \n Reward"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp"
                    android:typeface="serif" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_6sdp"
                android:alpha="0.7"
                android:background="@drawable/rounded_corner_call_sos"
                android:orientation="vertical">


                <com.universalsompo.meta.metaapp.utilities.CustomTextView
                    android:id="@+id/burn_dialog"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Burn\nReward"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp"
                    android:typeface="serif" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_gravity="center"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:alpha="0.7"
            android:background="@drawable/rounded_corner_call_sos"
            android:orientation="vertical">


            <com.universalsompo.meta.metaapp.utilities.CustomTextView
                android:id="@+id/close_dialog"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Close"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp"
                android:typeface="serif" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:visibility="visible"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:gravity="center"
        android:background="@drawable/circle_sos"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/fitness_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/font_awesome_gift"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sdp" />

    </RelativeLayout>
</RelativeLayout>