<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/_8sdp"
        android:paddingStart="@dimen/_8sdp"
        android:paddingEnd="@dimen/_8sdp"
        android:paddingBottom="@dimen/_25sdp"
        android:gravity="center|top">

        <com.universalsompo.meta.metaapp.utilities.CustomTextView1
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Use the heart disease risk calculator to find out your risk of cardiovascular disease."
            android:textSize="@dimen/_16sdp"
            android:typeface="serif"
            android:textColor="@color/lightblack"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/_12sdp"
            android:weightSum="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:orientation="vertical">
                <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.40"
                    android:text="LDL"
                    android:gravity="center"
                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_12sdp"
                    android:typeface="serif" />
            </LinearLayout>
            <View
                android:id="@+id/view1"
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:background="@color/grey"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:paddingStart="@dimen/_8sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/ldl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/linknew_edittext_bg"
                    android:gravity="bottom"
                    android:inputType="number"
                    android:hint="mg/dl"
                    android:paddingBottom="@dimen/_2sdp"
                    android:paddingStart="@dimen/_2sdp"
                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/montserrat_regular"
                    android:typeface="serif" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/grey"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:orientation="vertical">
                <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.40"
                    android:text="HDL"
                    android:gravity="center"
                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_12sdp"
                    android:typeface="serif" />
            </LinearLayout>
            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:background="@color/grey"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:paddingStart="@dimen/_8sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/hdl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/linknew_edittext_bg"
                    android:gravity="bottom"
                    android:inputType="number"
                    android:hint="mg/dl"
                    android:paddingBottom="@dimen/_2sdp"
                    android:paddingStart="@dimen/_2sdp"
                    android:textColor="@color/lightblack"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="@dimen/_12sdp"
                    android:typeface="serif" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_marginEnd="@dimen/_4sdp"
                android:orientation="vertical">
                <Button
                    android:id="@+id/clear_data"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="CLEAR"
                    android:typeface="serif"
                    android:textStyle="bold"
                    android:background="@color/lightish_grey"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/lightblack"
                    android:layout_gravity="right"
                    android:visibility="visible" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_marginStart="@dimen/_4sdp"
                android:orientation="vertical">
                <Button
                    android:id="@+id/calculate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="CALCULATE"
                    android:textSize="@dimen/_12sdp"
                    android:typeface="serif"
                    android:textStyle="bold"
                    android:background="@color/my_policy_tab_dark"
                    android:textColor="@color/white"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:visibility="gone"
            android:gravity="center"
            android:orientation="vertical">
            <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center"
                android:text="Result"
                android:visibility="visible"
                android:textColor="@color/lightblack"
                android:textSize="@dimen/_16sdp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:weightSum="3">
                <LinearLayout
                    android:id="@+id/ll_result_green"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                        android:id="@+id/tv_result_value_green"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.87"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="@color/color_green" />

                    <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                        android:id="@+id/tv_result_type_green"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(Ideal)"
                        android:textSize="@dimen/_11sdp"
                        android:gravity="center"
                        android:textColor="@color/lightblack" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_result_orange"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:layout_weight="1">
                    <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                        android:id="@+id/tv_result_value_orange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.87"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="@color/color_orange" />

                    <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                        android:id="@+id/tv_result_type_orange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(Moderate)"
                        android:textSize="@dimen/_11sdp"
                        android:gravity="center"
                        android:textColor="@color/lightblack" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_reult_red"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:visibility="invisible"
                    android:layout_weight="1">

                    <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                        android:id="@+id/tv_result_value_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.87"
                        android:textColor="@color/color_red"
                        android:textSize="@dimen/_11sdp" />

                    <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                        android:id="@+id/tv_result_type_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(High)"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="@color/lightblack" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <ImageView
                    android:id="@+id/img_drop_low_risk"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_weight="1"

                    android:src="@drawable/green_drop_down" />

                <ImageView
                    android:id="@+id/img_drop_medium_risk"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_weight="1"
                    android:src="@drawable/orange_drop_down"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/img_drop_high_risk"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_weight="1"
                    android:src="@drawable/red_drop_down"
                    android:visibility="invisible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal"
                android:weightSum="3">

                <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/color_green" />

                <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/color_orange" />

                <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/color_red" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:orientation="vertical"
                android:background="@drawable/rounded_corner_linear_layout"
                android:weightSum="3">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:orientation="horizontal"
                    android:weightSum="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:orientation="vertical">
                        <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ideal"
                            android:typeface="serif"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/lightblack"/>
                    </LinearLayout>
                    <View
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="match_parent"
                        android:background="@color/grey" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:orientation="vertical">
                        <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Below 2.0"
                            android:typeface="serif"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/lightblack"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:orientation="horizontal"
                    android:weightSum="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:orientation="vertical">
                        <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Moderate"
                            android:typeface="serif"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/lightblack"/>
                    </LinearLayout>
                    <View
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="match_parent"
                        android:background="@color/grey" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:orientation="vertical">
                        <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2.0 to 5.0"
                            android:typeface="serif"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/lightblack"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:orientation="horizontal"
                    android:weightSum="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:orientation="vertical">
                        <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="High"
                            android:typeface="serif"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/lightblack"/>
                    </LinearLayout>
                    <View
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="match_parent"
                        android:background="@color/grey" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:orientation="vertical">
                        <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Above 5.0"
                            android:typeface="serif"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/lightblack"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</ScrollView>