<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_220sdp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:paddingBottom="@dimen/_12sdp"
        android:background="@drawable/rounded_corner_white_sos"
        android:orientation="vertical">
        <com.universalsompo.meta.metaapp.utilities.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/lightblack"
            android:textSize="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_45sdp"
            android:typeface="serif"
            android:gravity="center"
            android:text="Send E-mail"/>

        <RadioGroup
            android:id="@+id/mail_radioGroup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_4sdp"
            android:weightSum="1"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/mail_radio_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Self"
                android:buttonTint="@color/pastel_yellow"
                android:typeface="serif"
                android:textColor="@color/lightblack"
                android:textSize="@dimen/_12sdp" />

            <RadioButton
                android:id="@+id/ohtermail_radio_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.13"
                android:checked="false"
                android:buttonTint="@color/pastel_yellow"
                android:layout_marginStart="@dimen/_20sdp"
                android:typeface="serif"
                android:textColor="@color/lightblack"
                android:text="Other"
                android:textSize="@dimen/_12sdp" />
        </RadioGroup>

        <EditText
            android:id="@+id/edt_add_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="Enter e-mail"
            android:inputType="textEmailAddress"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:visibility="gone"
            android:textColor="@color/lightblack"
            android:textSize="@dimen/_12sdp" />

        <com.universalsompo.meta.metaapp.utilities.CustomTextView
            android:id="@+id/txt_mailid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Send E-mail"
            android:padding="@dimen/_5sdp"
            android:textColor="@color/lightblack"
            android:typeface="serif"
            android:textSize="@dimen/_12sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:orientation="horizontal"
            android:weightSum="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:gravity="center"
                android:orientation="vertical">
                <com.universalsompo.meta.metaapp.utilities.CustomTextView
                    android:id="@+id/cancel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/dialog_button_text"
                    android:gravity="center"
                    android:textSize="@dimen/_13sdp"
                    android:typeface="serif"
                    android:text="Cancel"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginEnd="@dimen/_6sdp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_corner_motor_profile"
                    android:alpha="0.7"></LinearLayout>

                <com.universalsompo.meta.metaapp.utilities.CustomTextView
                    android:id="@+id/btn_send_mail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/_13sdp"
                    android:typeface="serif"
                    android:text="Send"/>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:gravity="center"
        android:background="@drawable/circle_profile"
        android:layout_centerHorizontal="true">
        <ImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/email_dialog_line_icon"
            android:tint="@color/white"/>
    </RelativeLayout>

</RelativeLayout>