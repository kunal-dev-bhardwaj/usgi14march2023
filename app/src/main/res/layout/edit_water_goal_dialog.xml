<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_220sdp"
    android:layout_height="@dimen/_250sdp"
    android:orientation="vertical"
    android:background="@drawable/health_dialog_layout"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.13"
        android:weightSum="1"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/close_dialog"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="right|center">
            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/cross_icon"
                android:tint="@color/lightblack"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/water_target"
                android:tint="@color/colorPrimary"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:typeface="serif"
            android:textColor="@color/lightblack"
            android:text="Set the new goal"/>
        <LinearLayout
            android:id="@+id/iv_addgoal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:gravity="center"
            android:layout_marginTop="@dimen/_8sdp">
            <ImageView
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:src="@drawable/add_water"
                android:tint="@color/colorPrimary"/>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/glass"
            android:layout_gravity="center"
            android:tint="@color/colorPrimary"/>
        <LinearLayout
            android:id="@+id/iv_removegoal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:src="@drawable/subtract_water"
                android:tint="@color/colorPrimary"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_totalglassgoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_8sdp"
            android:typeface="serif"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/black"
            android:text="8 Glasses"/>
        <TextView
            android:id="@+id/tv_totalqtygoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:typeface="serif"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/lightblack"
            android:text="2 liters"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.87"
        android:weightSum="1"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="0.5"
            android:background="@color/colorPrimary"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="@dimen/_14sdp"
                android:typeface="serif"
                android:text="Cancel"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tv_okwatergoal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="0.5"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="@dimen/_14sdp"
                android:typeface="serif"
                android:text="Save"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
