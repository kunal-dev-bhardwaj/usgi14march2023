<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_marginStart="@dimen/_6sdp"
    android:layout_marginEnd="@dimen/_6sdp"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:background="@drawable/rounded_corner_white_sos"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_12sdp">

        <com.universalsompo.meta.metaapp.utilities.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_55sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:gravity="center"
            android:text="By submitting this form, I agree to USGI and its representatives calling/contacting me. I also agree that I have read and understood the Privacy Policy and agree to abide by the same.\n \nI wish to Receive policy on WhatsApp."
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp"
            android:typeface="serif" />


    </LinearLayout>

    <RelativeLayout
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:gravity="center"
        android:background="@drawable/btn_bg1"
        android:layout_alignParentEnd="true">

        <ImageView
            android:id="@+id/crossImg"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/cross_white" />
    </RelativeLayout>

</RelativeLayout>