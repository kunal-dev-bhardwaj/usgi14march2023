<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_220sdp"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:background="@drawable/rounded_corner_white_sos"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_12sdp">
        <com.universalsompo.meta.metaapp.utilities.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_1sdp"
            android:gravity="center_horizontal"
            android:fontFamily="@font/montserrat_bold"
            android:text="Pledge"
            android:textColor="@color/black"
            android:textSize="12dp"
            />

        <TextView
            android:visibility="visible"
            android:layout_gravity="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:gravity="start"
            android:fontFamily="@font/montserrat_medium"
            android:text="Universal Sompo General Insurance is committed to saving lives and support the noble cause of organ donation. USGI has Partnered with a learning NGO, MOHAN Foundation, that has been working to promote organ donation in India.   "
            android:textColor="@color/darker_gray1"
            android:textSize="8dp"
            />

        <TextView
            android:visibility="visible"
            android:layout_gravity="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:gravity="start"
            android:fontFamily="@font/montserrat_medium"
            android:text="In our endeavor to support the cause, USGI is pleased to offer a 2.5% discount to all our customers who take the pledge to donate their organs after death. Click here to express your willingness to be an organ donor. Remember each one of us has the power to save lives."
            android:textColor="@color/darker_gray1"
            android:textSize="8dp"
            />
        <TextView
            android:visibility="visible"
            android:layout_gravity="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:gravity="start"
            android:fontFamily="@font/montserrat_bold"
            android:text="Note: This act is purely voluntary.Any and all personal information will be treated with utmost privacy and confidentiality, and will be used strictly for the purpose intended for."
            android:textColor="@color/black"
            android:textSize="9dp"
            />
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:checked="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/checkbox"
                android:layout_width="25dp"
                android:layout_height="25dp">
            </CheckBox>

            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/term_condition"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/_10sdp"
                        android:gravity="center"
                        android:textColor="@color/darker_gray1"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="I agree to "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                        android:textSize="@dimen/_10sdp"
                        android:gravity="center"
                        android:textColor="@color/darker_gray1"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="@string/term_condition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="horizontal"
            android:weightSum="1">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_6sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="match_parent"
                    android:background="@drawable/red_btn_bg"
                    android:orientation="vertical">
                    <com.universalsompo.meta.metaapp.utilities.CustomTextView
                        android:id="@+id/ok_dialog"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="Proceed"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp"
                        android:typeface="serif" />
                </LinearLayout>


            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:visibility="visible"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:gravity="center"
        android:background="@drawable/circle_sos"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/alert_dialog_line_icon"
            app:tint="@color/white" />
    </RelativeLayout>
</RelativeLayout>