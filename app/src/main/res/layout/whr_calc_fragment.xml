<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_8sdp"
    android:background="@color/white">

    <com.universalsompo.meta.metaapp.utilities.CustomTextView1
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waist to hip ratio is a posiible indicator of your health risk."
        android:textSize="@dimen/_16sdp"
        android:typeface="serif"
        android:textColor="@color/lightblack"
        android:gravity="center"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:orientation="vertical">
                    <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.40"
                        android:text="Waist"
                        android:gravity="center"
                        android:textColor="@color/lightblack"
                        android:textSize="@dimen/_12sdp"
                        android:typeface="serif" />
                </LinearLayout>
                <View
                    android:id="@+id/view1"
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="match_parent"
                    android:background="@color/grey"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/waist"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/linknew_edittext_bg"
                        android:gravity="bottom"
                        android:inputType="number"
                        android:hint="inches"
                        android:maxLength="2"
                        android:paddingBottom="@dimen/_2sdp"
                        android:paddingStart="@dimen/_2sdp"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/lightblack"
                        android:textSize="@dimen/_12sdp"
                        android:typeface="serif" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/grey"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:orientation="vertical">
                    <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.40"
                        android:text="Hip"
                        android:gravity="center"
                        android:textColor="@color/lightblack"
                        android:textSize="@dimen/_12sdp"
                        android:typeface="serif" />
                </LinearLayout>
                <View
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="match_parent"
                    android:background="@color/grey"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/hip"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/linknew_edittext_bg"
                        android:gravity="bottom"
                        android:inputType="number"
                        android:hint="inches"
                        android:maxLength="2"
                        android:paddingBottom="@dimen/_2sdp"
                        android:paddingStart="@dimen/_2sdp"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/lightblack"
                        android:textSize="@dimen/_12sdp"
                        android:typeface="serif" />
                </LinearLayout>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_marginEnd="@dimen/_4sdp"
                android:orientation="vertical">
                <Button
                    android:id="@+id/clear_data"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="CLEAR"
                    android:typeface="serif"
                    android:textStyle="bold"
                    android:background="@color/lightish_grey"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/lightblack"
                    android:layout_gravity="right"
                    android:visibility="visible" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_marginStart="@dimen/_4sdp"
                android:orientation="vertical">
                <Button
                    android:id="@+id/calculate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="CALCULATE"
                    android:textSize="@dimen/_12sdp"
                    android:typeface="serif"
                    android:textStyle="bold"
                    android:background="@color/my_policy_tab_dark"
                    android:textColor="@color/white"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:visibility="gone"
        android:gravity="center|top"
        android:orientation="vertical">
        <com.universalsompo.meta.metaapp.utilities.CustomTextView1
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Result"
            android:textColor="@color/lightblack"
            android:textSize="@dimen/_16sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/ll_result_green"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                    android:id="@+id/tv_result_value_green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.87"
                    android:textColor="@color/color_green"
                    android:textSize="@dimen/_11sdp" />

                <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                    android:id="@+id/tv_result_type_green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="(Desirable)"
                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_11sdp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_result_orange"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible">

                <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                    android:id="@+id/tv_result_value_orange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.87"
                    android:textColor="@color/color_orange"
                    android:textSize="@dimen/_11sdp" />

                <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                    android:id="@+id/tv_result_type_orange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="(Borderline High)"
                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_11sdp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_reult_red"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="invisible">

                <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                    android:id="@+id/tv_result_value_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.87"
                    android:textColor="@color/color_red"
                    android:textSize="@dimen/_11sdp" />

                <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                    android:id="@+id/tv_result_type_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(High)"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/_11sdp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:id="@+id/img_drop_low_risk"
                android:layout_width="0dp"
                android:layout_height="@dimen/_20sdp"
                android:layout_weight="1"
                android:src="@drawable/green_drop_down" />

            <ImageView
                android:id="@+id/img_drop_medium_risk"
                android:layout_width="0dp"
                android:layout_height="@dimen/_20sdp"
                android:layout_weight="1"
                android:src="@drawable/orange_drop_down"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/img_drop_high_risk"
                android:layout_width="0dp"
                android:layout_height="@dimen/_20sdp"
                android:layout_weight="1"
                android:src="@drawable/red_drop_down"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/color_green" />

            <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/color_orange" />

            <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/color_red" />
        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:shrinkColumns="*"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="@color/grey">
            <TableRow
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_1sdp">
                <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Health Risk"
                    android:gravity="center|left"
                    android:paddingStart="@dimen/_8sdp"
                    android:textStyle="bold"
                    android:padding="@dimen/_3sdp"
                    android:textColor="@color/lightblack"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginStart="@dimen/_1sdp"
                    android:layout_marginEnd="@dimen/_1sdp"
                    android:textSize="@dimen/_10sdp"
                    android:background="@color/white"
                    android:typeface="serif" />
                <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Men"
                    android:gravity="center|left"
                    android:paddingStart="@dimen/_8sdp"
                    android:textStyle="bold"
                    android:padding="@dimen/_3sdp"
                    android:textColor="@color/lightblack"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginStart="@dimen/_1sdp"
                    android:layout_marginEnd="@dimen/_1sdp"
                    android:textSize="@dimen/_10sdp"
                    android:background="@color/white"
                    android:typeface="serif" />
                <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Women"
                    android:gravity="center|left"
                    android:paddingStart="@dimen/_8sdp"
                    android:textStyle="bold"
                    android:padding="@dimen/_3sdp"
                    android:layout_marginStart="@dimen/_1sdp"
                    android:textColor="@color/lightblack"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="@dimen/_10sdp"
                    android:background="@color/white"
                    android:typeface="serif" />
            </TableRow>
            <TableRow
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_marginBottom="@dimen/_1sdp">

                <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_1sdp"
                    android:background="@color/white"
                    android:gravity="center|left"
                    android:paddingStart="@dimen/_8sdp"
                    android:padding="@dimen/_3sdp"
                    android:text="Low Risk"
                    android:textColor="@color/lightblack"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="&lt; 0.90"
                    android:gravity="center|left"
                    android:paddingStart="@dimen/_8sdp"
                    android:padding="@dimen/_3sdp"
                    android:textColor="@color/lightblack"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginStart="@dimen/_1sdp"
                    android:layout_marginEnd="@dimen/_1sdp"
                    android:textSize="@dimen/_10sdp"
                    android:background="@color/white"
                    android:typeface="serif" />
                <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="&lt; 0.80"
                    android:gravity="center|left"
                    android:paddingStart="@dimen/_8sdp"
                    android:padding="@dimen/_3sdp"
                    android:textColor="@color/lightblack"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginStart="@dimen/_1sdp"
                    android:textSize="@dimen/_10sdp"
                    android:background="@color/white"
                    android:typeface="serif" />
            </TableRow>
            <TableRow
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_marginBottom="@dimen/_1sdp">
                <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:paddingStart="@dimen/_8sdp"
                    android:textColor="@color/lightblack"
                    android:fontFamily="@font/montserrat_regular"
                    android:padding="@dimen/_3sdp"
                    android:textStyle="bold"
                    android:text="Moderate Risk"
                    android:layout_marginEnd="@dimen/_1sdp"
                    android:background="@color/white"
                    android:textSize="@dimen/_10sdp"
                    android:typeface="serif" />

                <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_1sdp"
                    android:layout_marginEnd="@dimen/_1sdp"
                    android:background="@color/white"
                    android:gravity="center|left"
                    android:paddingStart="@dimen/_8sdp"
                    android:padding="@dimen/_3sdp"
                    android:text="0.90 - 0.99"
                    android:textColor="@color/lightblack"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="@dimen/_10sdp"
                    android:typeface="serif" />

                <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0.80 - 0.84"
                    android:gravity="center|left"
                    android:paddingStart="@dimen/_8sdp"
                    android:padding="@dimen/_3sdp"
                    android:layout_marginStart="@dimen/_1sdp"
                    android:textColor="@color/lightblack"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="@dimen/_10sdp"
                    android:background="@color/white"
                    android:typeface="serif" />
            </TableRow>
            <TableRow
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_marginBottom="@dimen/_2sdp">
                <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:paddingStart="@dimen/_8sdp"
                    android:padding="@dimen/_3sdp"
                    android:textStyle="bold"
                    android:text="High Risk"
                    android:textColor="@color/lightblack"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginEnd="@dimen/_1sdp"
                    android:background="@color/white"
                    android:textSize="@dimen/_10sdp"
                    android:typeface="serif" />
                <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="&gt; 1.00"
                    android:gravity="center|left"
                    android:paddingStart="@dimen/_8sdp"
                    android:padding="@dimen/_3sdp"
                    android:textColor="@color/lightblack"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginStart="@dimen/_1sdp"
                    android:layout_marginEnd="@dimen/_1sdp"
                    android:textSize="@dimen/_10sdp"
                    android:background="@color/white"
                    android:typeface="serif" />
                <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="&gt; 0.85"
                    android:gravity="center|left"
                    android:paddingStart="@dimen/_8sdp"
                    android:padding="@dimen/_3sdp"
                    android:layout_marginStart="@dimen/_1sdp"
                    android:textColor="@color/lightblack"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="@dimen/_10sdp"
                    android:background="@color/white"
                    android:typeface="serif" />
            </TableRow>
        </TableLayout>
        <com.universalsompo.meta.metaapp.utilities.CustomTextView1
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:layout_marginTop="@dimen/_8sdp"
            android:textStyle="bold"
            android:text="Source: World Health Organization"
            android:textColor="@color/lightblack"
            android:textSize="@dimen/_10sdp"
            android:typeface="serif" />
    </LinearLayout>
</LinearLayout>