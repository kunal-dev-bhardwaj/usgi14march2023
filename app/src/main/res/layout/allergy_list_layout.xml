<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/_8sdp"
    android:paddingStart="@dimen/_8sdp"
    android:paddingEnd="@dimen/_8sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/edttxt_bg1"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_weight="0.1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:orientation="horizontal"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center|left"
                    android:paddingStart="@dimen/_8sdp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Allergy Type"
                        android:typeface="serif"
                        android:textSize="@dimen/_8sdp"
                        android:textColor="@color/lightblack"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/allergy_type"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:typeface="serif"
                        android:gravity="center|right"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:textSize="@dimen/_8sdp"
                        android:textColor="@color/lightblack"/>
                    <!--<Spinner
                        android:id="@+id/spn_allergy_type"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/drop_down_list1"
                        android:text="UP"
                        android:textSize="@dimen/_12sdp" />-->
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/grey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:orientation="horizontal"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center|left"
                    android:paddingStart="@dimen/_8sdp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Allergic To"
                        android:textSize="@dimen/_8sdp"
                        android:typeface="serif"
                        android:textColor="@color/lightblack"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/allergy_to"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:typeface="serif"
                        android:gravity="center|right"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:textSize="@dimen/_8sdp"
                        android:textColor="@color/lightblack"/>
                    <!--<Spinner
                        android:id="@+id/spn_allergic_to"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/drop_down_list1"
                        android:text="UP"
                        android:textSize="@dimen/_12sdp" />-->
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/grey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:orientation="horizontal"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center|left"
                    android:paddingStart="@dimen/_8sdp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reaction"
                        android:textSize="@dimen/_8sdp"
                        android:typeface="serif"
                        android:textColor="@color/lightblack"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:padding="@dimen/_4sdp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/reaction"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:typeface="serif"
                        android:gravity="center|right"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:textSize="@dimen/_8sdp"
                        android:textColor="@color/lightblack"/>
                    <!--<Spinner
                        android:id="@+id/spn_reaction"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/drop_down_list1"
                        android:text="UP"
                        android:textSize="@dimen/_12sdp" />-->
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/grey"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.9">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:padding="@dimen/_3sdp"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/edit_allergy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/_3sdp"
                    android:background="@drawable/circle_reminder_not_set"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/edit_allergy"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/delete_allergy"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:padding="@dimen/_3sdp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/_3sdp"
                    android:background="@drawable/circle_reminder_not_set"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/delete_allergy"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/share_allergy"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:padding="@dimen/_3sdp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/_3sdp"
                    android:background="@drawable/circle_reminder_not_set"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/share_allergy"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>