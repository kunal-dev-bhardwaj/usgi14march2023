<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/_18sdp"
        android:orientation="vertical">
        <com.universalsompo.meta.metaapp.utilities.CustomTextView
            android:id="@+id/current_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_18sdp"
            android:textColor="@color/my_policy_tab_dark"
            />
        <com.universalsompo.meta.metaapp.utilities.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/current_weight"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/lightblack"
            android:layout_marginTop="@dimen/_4sdp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/_220sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/rounded_corner_with_green"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/your_bmi_score"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/lightblack"
                    />
                <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/as_per_current_weight"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/lightblack"
                    />
            </LinearLayout>

            <com.universalsompo.meta.metaapp.utilities.CustomTextView
                android:id="@+id/current_weight_bmi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/_24sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_2sdp"

                android:textColor="@color/green"
                />
        </LinearLayout>

        <com.universalsompo.meta.metaapp.utilities.CustomTextView
            android:id="@+id/current_weight_bmi_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/green"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <com.universalsompo.meta.metaapp.utilities.BubbleSeekBar
            android:id="@+id/demo_1_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_60sdp"
            app:bsb_always_show_bubble="true"
            app:bsb_track_color="@color/transparent"
            app:bsb_thumb_radius_on_dragging="@dimen/_10sdp"
            app:bsb_thumb_radius="@dimen/_8sdp" />

        <com.universalsompo.meta.metaapp.utilities.CustomTextView
            android:id="@+id/ideal_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/lightblack"
            />

        <LinearLayout
            android:id="@+id/target_bmi_layout"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/rounded_corner_with_green"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:gravity="center"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/your_bmi_score"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/lightblack"
                        />
                    <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/as_per_target_weight"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/lightblack"
                        />
                </LinearLayout>

                <com.universalsompo.meta.metaapp.utilities.CustomTextView
                    android:id="@+id/target_weight_bmi"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/_24sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_2sdp"

                    android:textColor="@color/green"
                    />
            </LinearLayout>

            <com.universalsompo.meta.metaapp.utilities.CustomTextView
                android:id="@+id/target_weight_bmi_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/green"
                />
        </LinearLayout>

        <com.universalsompo.meta.metaapp.utilities.CustomTextView1
            android:id="@+id/tv_loseorgain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/lightblack" />

        <RelativeLayout
            android:id="@+id/set_loss_gain_fast_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp">

            <Spinner
                android:id="@+id/sp_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingEnd="@dimen/_5sdp"
                android:paddingStart="@dimen/_5sdp"
                android:layout_toStartOf="@+id/tv_perweek" />

            <com.universalsompo.meta.metaapp.utilities.CustomTextView
                android:id="@+id/tv_perweek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="@string/kg_per_week"
                android:textColor="@color/lightblack"
                tools:ignore="RelativeOverlap" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>