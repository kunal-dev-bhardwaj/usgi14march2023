<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools">
    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:scrollbars="none"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_155sdp"
                android:background="@color/white"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_4sdp"
                card_view:cardUseCompatPadding="true"
                android:elevation="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_12sdp"
                android:orientation="horizontal">
                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/image_slider"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:auto_cycle="true"
                    app:corner_radius="20"
                    app:period="1000"
                    app:delay="0"
                    app:error_image="@drawable/error"
                    app:selected_dot="@drawable/default_selected_dot"
                    app:unselected_dot="@drawable/default_unselected_dot" />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:id="@+id/Liner"
                android:layout_below="@+id/cardView"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_4sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:id="@+id/rl_buy_policy_btn"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_90sdp"
                        android:background="@drawable/grey_border"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center|bottom"
                            android:layout_weight="0.5">
                            <ImageView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:src="@drawable/motor_policy"
                                android:contentDescription="@string/self_assessment_icon"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center|top"
                            android:alpha="0.6"
                            android:paddingTop="@dimen/_6sdp"
                            android:layout_weight="0.5">
                            <com.universalsompo.meta.metaapp.utilities.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="Buy Policy"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp"
                                android:typeface="serif" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/rl_document_btn"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_90sdp"
                        android:layout_weight="1"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:background="@drawable/grey_border"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center|bottom"
                            android:layout_weight="0.5">
                            <ImageView
                                android:layout_width="@dimen/_45sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:background="@drawable/renewal_motor_icon"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center|top"
                            android:alpha="0.6"
                            android:paddingTop="@dimen/_6sdp"
                            android:layout_weight="0.5">
                            <com.universalsompo.meta.metaapp.utilities.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="Renewal"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp"
                                android:typeface="serif"
                                app:layout_constraintBottom_toTopOf="@+id/kycdesc"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/rl_policy_btn"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_90sdp"
                        android:layout_weight="1"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:background="@drawable/grey_border"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center|bottom"
                            android:layout_weight="0.5">
                            <ImageView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:src="@drawable/my_policy"
                                app:tint="@color/blue" />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center|top"
                            android:alpha="0.6"
                            android:paddingTop="@dimen/_6sdp"
                            android:layout_weight="0.5">
                            <com.universalsompo.meta.metaapp.utilities.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="My Policy"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp"
                                android:typeface="serif" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/rl_claim_btn"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_90sdp"
                        android:layout_weight="1"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:background="@drawable/grey_border"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center|bottom"
                            android:layout_weight="0.5">
                            <ImageView
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:src="@drawable/claim_line_icon"
                                app:tint="@color/color_orange" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center|top"
                            android:alpha="0.6"
                            android:paddingTop="@dimen/_6sdp"
                            android:layout_weight="0.5">
                            <com.universalsompo.meta.metaapp.utilities.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="Claim \nStatus"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp"
                                android:typeface="serif" />
                        </LinearLayout>
                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/rl_service_btn"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_90sdp"
                        android:layout_weight="1"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:background="@drawable/grey_border"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center|bottom"
                            android:layout_weight="0.5">
                            <ImageView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:src="@drawable/service_line_icon"
                                app:tint="@color/tab_text" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center|top"
                            android:alpha="0.6"
                            android:paddingTop="@dimen/_6sdp"
                            android:layout_weight="0.5">
                            <com.universalsompo.meta.metaapp.utilities.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="Services"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp"
                                android:typeface="serif" />

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/claim_intimation"
                        android:layout_weight="1"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_90sdp"
                        android:background="@drawable/grey_border"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center|bottom"
                            android:layout_weight="0.5">
                            <ImageView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:src="@drawable/rsa_line_icon"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:tint="@color/color_red" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center|top"
                            android:alpha="0.6"
                            android:paddingTop="@dimen/_6sdp"
                            android:layout_weight="0.5">
                            <com.universalsompo.meta.metaapp.utilities.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="Claim \nIntimation"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp"
                                android:gravity="center"
                                android:typeface="serif"
                                app:layout_constraintBottom_toTopOf="@+id/kycdesc"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_weight="1"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:id="@+id/rl_rsa_btn"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_90sdp"
                        android:background="@drawable/grey_border"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center|bottom"
                            android:layout_weight="0.5">
                            <ImageView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:src="@drawable/rsa_line_icon"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:tint="@color/color_red" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center|top"
                            android:alpha="0.6"
                            android:paddingTop="@dimen/_6sdp"
                            android:layout_weight="0.5">
                            <com.universalsompo.meta.metaapp.utilities.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="RSA"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_14sdp"
                                android:gravity="center"
                                android:typeface="serif"
                                app:layout_constraintBottom_toTopOf="@+id/kycdesc"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/Liner"
                android:id="@+id/layout_content_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:orientation="horizontal"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:weightSum="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center|start"
                        android:layout_weight="0.3">
                        <com.universalsompo.meta.metaapp.utilities.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/video_article"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/black" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/view_all_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center|end"
                        android:layout_weight="0.7">
                        <com.universalsompo.meta.metaapp.utilities.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View All >>"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/colorPrimaryDark" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_videos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:orientation="vertical">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerview_videos"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:orientation="horizontal"
                        android:scrollbars="none" />
                </LinearLayout>
                <View
                    android:background="@color/light_grey"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp">

                </View>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/tips_list"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none"
                    android:dividerHeight="@dimen/_2sdp"
                    android:orientation="horizontal" />


            </LinearLayout>




            <LinearLayout
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <androidx.cardview.widget.CardView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    card_view:cardUseCompatPadding="true"
                    android:elevation="@dimen/_5sdp"
                    app:cardCornerRadius="@dimen/_8sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/pastel_blue"
                                android:alpha="0.3"
                                android:orientation="vertical" />

                            <com.universalsompo.meta.metaapp.utilities.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:gravity="center|end"
                                android:paddingBottom="@dimen/_18sdp"
                                android:paddingStart="@dimen/_8sdp"
                                android:paddingEnd="@dimen/_8sdp"
                                android:paddingTop="@dimen/_18sdp"
                                android:text="Buy motor insurance online"
                                android:textColor="@color/lightblack"
                                android:textSize="@dimen/_12sdp"
                                android:typeface="serif" />
                        </RelativeLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:gravity="center"
                            android:paddingTop="@dimen/_18sdp"
                            android:paddingBottom="@dimen/_18sdp"
                            android:alpha="0.6"
                            android:background="@color/pastel_blue"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:src="@drawable/buy_policy_icon"
                                app:tint="@color/white" />

                            <com.universalsompo.meta.metaapp.utilities.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="Buy Policy"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12sdp"
                                android:typeface="serif" />
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    card_view:cardUseCompatPadding="true"
                    android:elevation="@dimen/_5sdp"
                    app:cardCornerRadius="@dimen/_8sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:gravity="center"
                            android:paddingTop="@dimen/_18sdp"
                            android:paddingBottom="@dimen/_18sdp"
                            android:alpha="0.6"
                            android:background="@color/pastel_purple"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:src="@drawable/my_policy"
                                app:tint="@color/white" />

                            <com.universalsompo.meta.metaapp.utilities.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="My Policy"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12sdp"
                                android:typeface="serif" />
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/pastel_purple"
                                android:alpha="0.3"
                                android:orientation="vertical" />

                            <com.universalsompo.meta.metaapp.utilities.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:gravity="center|left"
                                android:paddingBottom="@dimen/_18sdp"
                                android:paddingStart="@dimen/_8sdp"
                                android:paddingEnd="@dimen/_8sdp"
                                android:paddingTop="@dimen/_18sdp"
                                android:text="Manage policies, view policy details"
                                android:textColor="@color/lightblack"
                                android:textSize="@dimen/_12sdp"
                                android:typeface="serif" />
                        </RelativeLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:cardCornerRadius="@dimen/_5sdp"
                    android:elevation="@dimen/_8sdp"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/pastel_green"
                                android:alpha="0.3"
                                android:orientation="vertical" />
                            <com.universalsompo.meta.metaapp.utilities.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:gravity="center|right"
                                android:paddingBottom="@dimen/_18sdp"
                                android:paddingStart="@dimen/_8sdp"
                                android:paddingEnd="@dimen/_8sdp"
                                android:paddingTop="@dimen/_18sdp"
                                android:textColor="@color/lightblack"
                                android:textSize="@dimen/_12sdp"
                                android:typeface="serif"
                                android:text="Claims &amp; Garages" />
                            <!--                android:text="File Claims, find network Garages"-->

                        </RelativeLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:gravity="center"
                            android:alpha="0.6"
                            android:paddingTop="@dimen/_18sdp"
                            android:paddingBottom="@dimen/_18sdp"
                            android:background="@color/pastel_green"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:src="@drawable/claim_line_icon"
                                app:tint="@color/white" />

                            <com.universalsompo.meta.metaapp.utilities.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:text="Claim"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_14sdp"
                                android:typeface="serif" />
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:cardCornerRadius="@dimen/_8sdp"
                    android:elevation="@dimen/_5sdp"
