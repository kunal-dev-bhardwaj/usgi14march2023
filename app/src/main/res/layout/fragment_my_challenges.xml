<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_8sdp"
    android:background="@color/my_challenges_background" >

    <!-- android:background="@drawable/my_challenges" -->
    <TextView
        android:id="@+id/global_challenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Global Challenges"
        android:textColor="@color/lightblack"
        android:textStyle="bold"
        android:typeface="serif"
        android:textSize="@dimen/_14sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:orientation="horizontal"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:padding="@dimen/_10sdp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/sweat_it_out"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/white">
                <ImageView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:src="@drawable/a"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sweat it out"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"
                    android:typeface="serif" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ride the most KM in 30 min"
                    android:textSize="@dimen/_8sdp"
                    android:textColor="@color/lightblack"
                    android:typeface="serif" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 Apr - 30 Apr 2018"
                    android:textSize="@dimen/_8sdp"
                    android:textColor="@color/lightblack"
                    android:typeface="serif" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:padding="@dimen/_10sdp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/white">
                <ImageView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:src="@drawable/b"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Running"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"
                    android:typeface="serif" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Run 4 KM in 20 min"
                    android:textSize="@dimen/_8sdp"
                    android:textColor="@color/lightblack"
                    android:typeface="serif" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 Apr - 30 Apr 2018"
                    android:textSize="@dimen/_8sdp"
                    android:textColor="@color/lightblack"
                    android:typeface="serif" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

