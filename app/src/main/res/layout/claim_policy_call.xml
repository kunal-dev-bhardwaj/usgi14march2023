<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <com.universalsompo.meta.metaapp.utilities.CustomTextView
                android:id="@+id/comp_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:gravity="center"
                android:typeface="serif"
                android:textColor="@color/lightblack"
                android:textSize="@dimen/_14sdp" />

            <com.universalsompo.meta.metaapp.utilities.CustomTextView
                android:id="@+id/helpLIne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:typeface="serif"
                android:textColor="@color/lightblack"
                android:textSize="@dimen/_14sdp" />

            <com.universalsompo.meta.metaapp.utilities.CustomTextView
                android:id="@+id/call"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_with_green_color"
                android:gravity="center"
                android:padding="@dimen/_2sdp"
                android:text="Call"
                android:typeface="serif"
                android:textColor="@color/lightblack"
                android:textSize="@dimen/_15sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_15sdp"
            android:background="@drawable/border_two"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp"
            android:paddingStart="@dimen/_8sdp">

            <com.universalsompo.meta.metaapp.utilities.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_2sdp"
                android:text="Coverage Details"
                android:textSize="@dimen/_16sdp"
                android:typeface="serif"
                android:textColor="@color/lightblack" />


            <!--<RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <include layout="@layout/no_data_found"/>

                <android.support.v7.widget.RecyclerView
                android:id="@+id/claim_policy_call_recycle"
                android:descendantFocusability="blocksDescendants"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:paddingEnd="@dimen/_8sdp" />

            </RelativeLayout>-->

            <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                android:id="@+id/textt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:textSize="@dimen/_12sdp"
                android:visibility="visible"
                android:typeface="serif" />

        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>