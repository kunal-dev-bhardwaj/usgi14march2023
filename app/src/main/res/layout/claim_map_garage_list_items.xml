<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        card_view:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        card_view:cardPreventCornerOverlap="true"
        app:contentPadding="@dimen/_3sdp"
        android:elevation="@dimen/_8sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_3sdp"
            android:paddingTop="@dimen/_3sdp"
            android:paddingStart="@dimen/_3sdp"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.35"
                android:gravity="center|left"
                android:orientation="vertical">

                <com.universalsompo.meta.metaapp.utilities.CustomTextView
                    android:id="@+id/name_of_workshop2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Maruti Swift"
                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_12sdp" />

                <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                    android:id="@+id/location_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Policy Number"
                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_11sdp" />

                <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expiry Date: "
                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_10sdp"
                    android:visibility="gone" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.65"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icon_location"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:padding="@dimen/_2sdp"
                        android:src="@drawable/pinpoint_line_icon" />

                    <View
                        android:id="@+id/view1"
                        android:layout_width="@dimen/_1sdp"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:layout_height="match_parent"
                        android:background="@color/grey" />

                    <ImageView
                        android:id="@+id/icon_call"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:padding="@dimen/_2sdp"
                        android:src="@drawable/call_line_icon" />
                </LinearLayout>

                <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                    android:id="@+id/help_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9999999999"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/lightblack" />
            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>