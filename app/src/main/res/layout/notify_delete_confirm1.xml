<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="@dimen/_220sdp"
    android:layout_height="@dimen/_180sdp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:background="@drawable/rounded_corner_white_sos">
        <com.universalsompo.meta.metaapp.utilities.CustomTextView
            android:layout_marginTop="@dimen/_35sdp"
            android:id="@+id/dialog_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/lightblack"
            android:textSize="@dimen/_14sdp"
            android:typeface="serif"
            android:gravity="center"
            android:text="@string/confirmation"/>

        <com.universalsompo.meta.metaapp.utilities.CustomTextView1
            android:id="@+id/tvmobnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lightblack"
            android:gravity="center"
            android:layout_below="@id/dialog_heading"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_9sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_12sdp"
            android:typeface="serif" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            android:orientation="horizontal"
            android:weightSum="1"
            android:paddingBottom="@dimen/_8sdp"
            android:layout_alignParentBottom="true"
            android:baselineAligned="false">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_weight="0.5"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_corner_motor_profile"
                    android:alpha="0.7"/>

                <com.universalsompo.meta.metaapp.utilities.CustomTextView
                    android:id="@+id/tvno"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/_13sdp"
                    android:typeface="serif"
                    android:text="@string/no"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_weight="0.5"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginEnd="@dimen/_6sdp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_corner_motor_profile"
                    android:alpha="0.7"/>

                <com.universalsompo.meta.metaapp.utilities.CustomTextView
                    android:id="@+id/tvyes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/_13sdp"
                    android:typeface="serif"
                    android:text="@string/yes"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:gravity="center"
        android:background="@drawable/circle_profile"
        android:layout_centerHorizontal="true">
        <ImageView
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:src="@drawable/terms_condition_icon"
            android:tint="@color/white" />
    </RelativeLayout>
</RelativeLayout>