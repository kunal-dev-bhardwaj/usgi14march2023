<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        android:orientation="vertical"
        android:elevation="@dimen/_5sdp"
        android:background="@drawable/half_circle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_65sdp"
            android:orientation="horizontal"
            android:background="@color/white"
            android:weightSum="6">

            <!-- STEPS -->
            <LinearLayout
                android:id="@+id/steps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:tint="@color/lightblack"
                    android:src="@drawable/steps"/>
                <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Steps"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:textColor="@color/lightblack"
                    android:typeface="serif"
                    android:textSize="@dimen/_8sdp" />
                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_4sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/pastel_purple"/>
            </LinearLayout>

            <!-- RUNNING -->
            <LinearLayout
                android:visibility="invisible"
                android:id="@+id/running"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:tint="@color/lightblack"
                    android:src="@drawable/running"/>
                <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Running"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:textColor="@color/lightblack"
                    android:typeface="serif"
                    android:textSize="@dimen/_8sdp" />
                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_4sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white"/>
            </LinearLayout>

            <!-- CYCLING -->
            <LinearLayout
                android:visibility="invisible"
                android:id="@+id/cycling"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:tint="@color/lightblack"
                    android:src="@drawable/cycling"/>
                <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Cycling"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:textColor="@color/lightblack"
                    android:typeface="serif"
                    android:textSize="@dimen/_8sdp" />
                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_4sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white"/>
            </LinearLayout>

            <!-- SWIMMING -->
            <LinearLayout
                android:visibility="invisible"
                android:id="@+id/swimming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:tint="@color/lightblack"
                    android:src="@drawable/swimminglog"/>
                <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Swimming"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:textColor="@color/lightblack"
                    android:typeface="serif"
                    android:textSize="@dimen/_8sdp" />
                <View
                    android:id="@+id/view4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_4sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white"/>
            </LinearLayout>

            <!-- WORKOUT -->
            <LinearLayout
                android:visibility="invisible"
                android:id="@+id/workout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:tint="@color/lightblack"
                    android:src="@drawable/workoutlog"/>
                <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Workout"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:textColor="@color/lightblack"
                    android:typeface="serif"
                    android:textSize="@dimen/_8sdp" />
                <View
                    android:id="@+id/view5"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_4sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white"/>
            </LinearLayout>

            <!-- YOGA -->
            <LinearLayout
                android:visibility="invisible"
                android:id="@+id/yoga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:tint="@color/lightblack"
                    android:src="@drawable/yogalog"/>
                <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Yoga"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:textColor="@color/lightblack"
                    android:typeface="serif"
                    android:textSize="@dimen/_8sdp" />
                <View
                    android:id="@+id/view6"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_4sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:orientation="vertical"
            android:gravity="center">
            <com.universalsompo.meta.metaapp.utilities.CustomTextView
                android:id="@+id/month_year_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/_14sdp"
                android:typeface="serif"
                android:text="2022"
                android:textColor="@color/lightblack"/>
        </LinearLayout>

    </LinearLayout>



    <FrameLayout
        android:id="@+id/exercise_container1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" />

</LinearLayout>