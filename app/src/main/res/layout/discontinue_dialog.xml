<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_220sdp"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:paddingBottom="@dimen/_12sdp"
        android:background="@drawable/rounded_corner_white_sos"
        android:orientation="vertical">


        <com.universalsompo.meta.metaapp.utilities.CustomTextView
            android:id="@+id/delete_dialog_text"
            android:text="Are you sure you want to discontinue?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lightblack"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_45sdp"
            android:textSize="@dimen/_14sdp"
            android:typeface="serif" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:layout_weight="0.5"
                android:orientation="vertical">
                <com.universalsompo.meta.metaapp.utilities.CustomTextView
                    android:id="@+id/no_discontinue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/lightblack"
                    android:gravity="center"
                    android:textSize="@dimen/_13sdp"
                    android:typeface="serif"
                    android:text="No"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_weight="0.5"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_corner_motor_alert" />

                <com.universalsompo.meta.metaapp.utilities.CustomTextView
                    android:id="@+id/yes_discontinue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/_13sdp"
                    android:typeface="serif"
                    android:text="Yes"/>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:gravity="center"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle_alert"
            android:orientation="vertical" />

        <ImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:padding="@dimen/_6sdp"
            android:src="@drawable/logout_line_icon"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:tint="@color/white"/>
    </RelativeLayout>

</RelativeLayout>