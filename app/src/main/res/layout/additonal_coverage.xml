<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/_4sdp"
    android:layout_marginStart="@dimen/_4sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_8sdp"
        app:cardElevation="@dimen/_12sdp"
        app:cardCornerRadius="@dimen/_12sdp"
        android:layout_width="@dimen/_260sdp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_weight="0.5"
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            </CheckBox>
                            <ImageView
                                android:layout_gravity="center"
                                android:src="@drawable/motor_cash_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </ImageView>
                            <TextView
                                android:id="@+id/CoverageName"
                                android:layout_marginStart="@dimen/_4sdp"
                                android:textColor="@color/black"
                                android:textSize="14dp"
                                android:fontFamily="@font/montserrat_semibold"
                                android:text="Additional Covers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:paddingEnd="@dimen/_2sdp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/CoveragePremiumTxt"
                                android:layout_marginStart="@dimen/_1sdp"
                                android:textColor="@color/new_darker_gray"
                                android:textSize="16dp"
                                android:fontFamily="@font/montserrat_semibold"
                                android:text="â‚¹ 800 "
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            </TextView>
                        </LinearLayout>


                    </LinearLayout>
                    <TextView
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@color/new_darker_gray"
                        android:textSize="10dp"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="An add-on that covers co-passengers in case of death due to accident. his personal accident cover provides coverage to the co-passenger "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_20sdp"
                android:background="#E8E7E7"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:textColor="@color/new_darker_gray"
                    android:textSize="12dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Personal protect cover for co-passenger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <LinearLayout
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="2 Lakh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/black"
                        android:buttonTint="@drawable/radiobutton"
                        />
                    <RadioButton
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="4 Lakh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/black"
                        android:buttonTint="@drawable/radiobutton"
                        />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>