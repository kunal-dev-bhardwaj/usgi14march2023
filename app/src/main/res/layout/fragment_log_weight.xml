<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center|top"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_90sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:src="@drawable/weighing_machine"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/minus_weight"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/minus_weight_button"
            android:layout_marginEnd="@dimen/_12sdp"
            android:tint="@color/my_policy_tab_dark"/>
        <EditText
            android:id="@+id/weight"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="match_parent"
            android:textSize="@dimen/_14sdp"
            android:gravity="center"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/lightblack"
            android:inputType="numberDecimal"
            android:typeface="serif"
            android:maxLength="4"/>
        <com.universalsompo.meta.metaapp.utilities.CustomTextView1
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/lightblack"
            android:layout_marginStart="@dimen/_5sdp"
            android:typeface="serif"
            android:text="Kgs"/>
        <ImageView
            android:id="@+id/add_weight"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/plus_weight_button"
            android:layout_marginStart="@dimen/_12sdp"
            android:tint="@color/my_policy_tab_dark"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_50sdp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/_10sdp">
        <ImageView
            android:id="@+id/user_img"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/dummy"/>
        <LinearLayout
            android:id="@+id/upload_image"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_with_colorprimary"
            android:orientation="vertical"
            android:padding="@dimen/_8sdp"
            android:gravity="center"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_15sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload"
                android:textColor="@color/lightblack"
                android:typeface="serif"
                android:textSize="@dimen/_12sdp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/save_weight"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_40sdp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/rounded_counded_with_filled_colorprimary">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log Weight"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/_12sdp"
            android:typeface="serif"/>
    </LinearLayout>
</LinearLayout>