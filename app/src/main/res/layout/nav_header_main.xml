<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background2"
    android:gravity="bottom"
    android:id="@+id/drawer_head"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/_30sdp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/nav_user_img"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:src="@drawable/dummy"
        app:civ_border_color="@color/black"
        app:civ_border_width="@dimen/_2sdp" />

    <com.universalsompo.meta.metaapp.utilities.CustomTextView
        android:textColor="@color/lightblack"
        android:id="@+id/txt_nav_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/_5sdp"
        android:text="Meta User"
        android:typeface="serif"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="@dimen/txt_size" />

    <com.universalsompo.meta.metaapp.utilities.CustomTextView1
        android:textColor="@color/lightblack"
        android:id="@+id/txt_nav_phn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:typeface="serif"
        android:text="+91-9888261345"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="@dimen/txt_size" />
    </LinearLayout>


