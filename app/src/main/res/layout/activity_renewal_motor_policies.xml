<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginRight="@dimen/_15sdp"
    android:layout_marginLeft="@dimen/_15sdp"
    tools:context=".metaapp.motor.activities.Renewal_motor_policies">


    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/llHeadRoundImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/universal_logo" />

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="vertical">
            <com.universalsompo.meta.metaapp.utilities.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:typeface="serif"
                android:textColor="@color/lightblack"
                android:textSize="@dimen/_18sdp"
                android:text="Universal Sompo" />

            <com.universalsompo.meta.metaapp.utilities.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:typeface="serif"
                android:textColor="@color/lightblack"
                android:textSize="@dimen/_14sdp"
                android:text="General Insurance Co. Ltd." />

            <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:typeface="serif"
                android:textColor="@color/lightblack"
                android:textSize="@dimen/_14sdp"
                android:text="Suraksha, Hamesha Aapke Saath" />

        </LinearLayout>
    </LinearLayout>

    <com.universalsompo.meta.metaapp.utilities.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_16sdp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:text="Motor Insurance Renewal"
        android:fontFamily="@font/montserrat_semibold"
        android:layout_marginBottom="@dimen/_10sdp"
        android:textColor="@color/colorPrimaryDark"/>


    <HorizontalScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/linerTwo"
                android:layout_marginEnd="@dimen/_5sdp"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/new_tab_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/bike_icon"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    app:tint="@color/yellow">
                </ImageView>
                <TextView
                    android:id="@+id/txtTwo"
                    android:paddingStart="@dimen/_5sdp"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/red_new"
                    android:text="Two Wheeler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linerPrivate"
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_marginStart="@dimen/_2sdp"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/grey_tab_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/car"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    app:tint="@color/lightblack">
                </ImageView>
                <TextView
                    android:id="@+id/txtPrivate"
                    android:paddingStart="@dimen/_5sdp"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/lightblack"
                    android:text="Private Car"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linerCommercial"
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_marginStart="@dimen/_2sdp"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/grey_tab_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    app:tint="@color/lightblack"
                    android:src="@drawable/commercial_vehicle"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp">
                </ImageView>
                <TextView
                    android:id="@+id/txtCommercial"
                    android:paddingStart="@dimen/_5sdp"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/lightblack"
                    android:text="Commercial vehicle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>
    <FrameLayout
        android:id="@+id/policy_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tab_layer"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@color/white"
        android:orientation="horizontal">

    </FrameLayout>





    <com.google.android.material.tabs.TabLayout
        android:id="@+id/OrderItemsLayout"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_height="@dimen/_35sdp"
        app:tabMode="scrollable"
        app:tabIndicatorFullWidth="false"
        app:tabIndicator="@null"
        app:tabGravity="fill"
        android:visibility="gone"
        app:tabPaddingStart="25dp"
        app:tabPaddingEnd="25dp"
        app:tabBackground="@drawable/tab_color_selector"
        app:tabSelectedTextColor="@color/new_red"
        app:tabTextColor="@color/lightblack"
        app:tabTextAppearance="@style/TabLayoutStyle"
        />

    <androidx.viewpager.widget.ViewPager
        android:visibility="gone"
        android:id="@+id/OrderItemsPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/OrderItemsLayout"
        android:layout_centerInParent="true"
        tools:layout_editor_absoluteX="8dp" />






</LinearLayout>