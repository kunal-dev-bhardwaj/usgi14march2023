<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/_5sdp"
    android:layout_marginStart="@dimen/_3sdp"
    android:layout_marginTop="@dimen/_3sdp"
    android:layout_marginEnd="@dimen/_3sdp"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_marginEnd="@dimen/_3sdp"
        android:elevation="@dimen/_5sdp"
        android:padding="@dimen/_3sdp"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="@dimen/_3sdp">

        <RelativeLayout
            android:id="@+id/rel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <LinearLayout
                android:paddingEnd="@dimen/_2sdp"
                android:paddingStart="@dimen/_5sdp"
                android:gravity="center"
                android:id="@+id/header"
                android:padding="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/edttxt_bg_1"
                android:weightSum="1">
                <TextView
                    android:textSize="@dimen/_13sdp"
                    android:paddingStart="@dimen/_5sdp"
                    android:id="@+id/hospital_nm"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/policy_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <com.universalsompo.meta.metaapp.utilities.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact"
                        android:textColor="@color/policy_header_text_color"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold"
                        android:typeface="serif" />

                    <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                        android:id="@+id/txt_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:textColor="@color/lightblack"
                        android:textSize="@dimen/_12sdp"
                        android:typeface="serif" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.universalsompo.meta.metaapp.utilities.CustomTextView
                        android:id="@+id/expire"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pin Code"
                        android:textColor="@color/expiry_header"
                        android:textSize="@dimen/_10sdp"
                        android:typeface="serif" />

                    <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                        android:id="@+id/txt_pin_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:textColor="@color/expiry_header"
                        android:textSize="@dimen/_10sdp"
                        android:typeface="serif" />
                </LinearLayout>

            </LinearLayout>

            <com.universalsompo.meta.metaapp.utilities.CustomTextView
                android:id="@+id/txt_full_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/policy_data"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/policy_header_text_color"
                android:textSize="@dimen/_11sdp"
                android:typeface="serif" />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/txt_full_address"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:background="@color/grey" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>