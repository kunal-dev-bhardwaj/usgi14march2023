<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:scrollbars="none">

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingStart="@dimen/_8sdp"
                android:orientation="vertical"
                android:layout_weight="0.65">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:gravity="center|left"
                    android:typeface="serif"
                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:paddingEnd="@dimen/_8sdp"
                android:orientation="vertical"
                android:layout_weight="0.35">
                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:typeface="serif"
                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:visibility="gone"
            android:background="@color/grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:visibility="gone"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingStart="@dimen/_8sdp"
                android:orientation="vertical"
                android:layout_weight="0.65">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Employee ID"
                    android:gravity="center|left"
                    android:typeface="serif"
                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:paddingEnd="@dimen/_8sdp"
                android:orientation="vertical"
                android:layout_weight="0.35">
                <TextView
                    android:id="@+id/user_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:typeface="serif"
                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingStart="@dimen/_8sdp"
                android:orientation="vertical"
                android:layout_weight="0.65">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email ID"
                    android:gravity="center|left"
                    android:typeface="serif"
                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:paddingEnd="@dimen/_8sdp"
                android:orientation="vertical"
                android:layout_weight="0.35">
                <TextView
                    android:id="@+id/user_email_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:typeface="serif"
                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:visibility="gone"
            android:background="@color/grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:visibility="gone"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingStart="@dimen/_8sdp"
                android:orientation="vertical"
                android:layout_weight="0.65">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Office Location"
                    android:gravity="center|left"
                    android:typeface="serif"
                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:paddingEnd="@dimen/_8sdp"
                android:orientation="vertical"
                android:layout_weight="0.35">
                <TextView
                    android:id="@+id/user_office_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:typeface="serif"
                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingStart="@dimen/_8sdp"
                android:orientation="vertical"
                android:layout_weight="0.65">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mobile"
                    android:gravity="center|left"
                    android:typeface="serif"
                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:paddingEnd="@dimen/_8sdp"
                android:orientation="vertical"
                android:layout_weight="0.35">
                <TextView
                    android:id="@+id/user_mobile_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:typeface="serif"
                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/grey" />

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingStart="@dimen/_8sdp"
                android:orientation="vertical"
                android:layout_weight="0.65">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Landline"
                    android:gravity="center|left"
                    android:typeface="serif"
                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:paddingEnd="@dimen/_8sdp"
                android:orientation="vertical"
                android:layout_weight="0.35">
                <TextView
                    android:id="@+id/user_office_landline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:typeface="serif"
                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingStart="@dimen/_8sdp"
                android:orientation="vertical"
                android:layout_weight="0.65">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:gravity="center|left"
                    android:typeface="serif"
                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:paddingEnd="@dimen/_8sdp"
                android:orientation="vertical"
                android:layout_weight="0.35">
                <TextView
                    android:id="@+id/user_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:typeface="serif"
                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingStart="@dimen/_8sdp"
                android:orientation="vertical"
                android:layout_weight="0.65">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date of Birth"
                    android:gravity="center|left"
                    android:typeface="serif"
                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:paddingEnd="@dimen/_8sdp"
                android:orientation="vertical"
                android:layout_weight="0.35">
                <TextView
                    android:id="@+id/user_dob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:typeface="serif"
                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:id="@+id/userDobEdit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|right"                    android:inputType="number"
                    android:background="@null"
                    android:visibility="gone"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/lightblack"/>

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingStart="@dimen/_8sdp"
                android:orientation="vertical"
                android:layout_weight="0.65">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Blood Group"
                    android:gravity="center|left"
                    android:typeface="serif"
                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:paddingEnd="@dimen/_8sdp"
                android:orientation="vertical"
                android:layout_weight="0.35">
                <TextView
                    android:id="@+id/user_blood_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:typeface="serif"
                    android:visibility="visible"
                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_12sdp" />
                <Spinner
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:visibility="gone"
                    android:textAlignment="center"
                    android:paddingStart="@dimen/_10sdp"
                    android:id="@+id/blood_group_spinner">

                </Spinner>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingStart="@dimen/_8sdp"
                android:orientation="vertical"
                android:layout_weight="0.65">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Height"
                    android:gravity="center|left"
                    android:typeface="serif"
                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:paddingEnd="@dimen/_8sdp"
                android:orientation="horizontal"
                android:layout_weight="0.35">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_50sdp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/user_feet"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/lightblack"/>
                    <LinearLayout
                        android:id="@+id/edt_feet"
                        android:layout_width="@dimen/_28sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:orientation="vertical"
                        android:visibility="gone">
                        <EditText
                            android:id="@+id/feet"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="1"
                            android:visibility="gone"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/lightblack"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/feet_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Feet"
                        android:visibility="gone"
                        android:typeface="serif"
                        android:textSize="@dimen/_8sdp"
                        android:textColor="@color/lightblack" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/inches_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:visibility="gone"
                    android:gravity="center"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/edt_inches"
                        android:layout_width="@dimen/_28sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:orientation="vertical"
                        android:visibility="gone">
                        <TextView
                            android:id="@+id/user_inches"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="@dimen/_10sdp"
                            android:visibility="gone"
                            android:textColor="@color/lightblack"/>
                        <EditText
                            android:id="@+id/inches"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="number"
                            android:gravity="center"
                            android:maxLength="2"
                            android:visibility="gone"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/lightblack"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/inches_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inches"
                        android:typeface="serif"
                        android:visibility="gone"
                        android:textSize="@dimen/_8sdp"
                        android:textColor="@color/lightblack" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingStart="@dimen/_8sdp"
                android:orientation="vertical"
                android:layout_weight="0.65">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Weight"
                    android:gravity="center|left"
                    android:typeface="serif"
                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:paddingEnd="@dimen/_8sdp"
                android:orientation="horizontal"
                android:layout_weight="0.35">
                <TextView
                    android:id="@+id/user_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:typeface="serif"
                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_12sdp" />
                <EditText
                    android:id="@+id/weight"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="match_parent"
                    android:inputType="numberDecimal"
                    android:gravity="center"
                    android:maxLength="4"
                    android:visibility="gone"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/lightblack"/>
                <TextView
                    android:id="@+id/user_weight1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:typeface="serif"
                    android:visibility="gone"
                    android:text="kg"
                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingStart="@dimen/_8sdp"
                android:orientation="vertical"
                android:layout_weight="0.65">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Daily Activity"
                    android:gravity="center|left"
                    android:typeface="serif"
                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:paddingEnd="@dimen/_8sdp"
                android:orientation="vertical"
                android:layout_weight="0.35">
                <TextView
                    android:id="@+id/user_daily_activity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:typeface="serif"
                    android:visibility="visible"
                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_12sdp" />
                <Spinner
                    android:layout_width="@dimen/_160sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:visibility="gone"
                    android:textAlignment="center"
                    android:paddingStart="@dimen/_10sdp"
                    android:id="@+id/daily_activity_spinner"></Spinner>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingStart="@dimen/_8sdp"
                android:orientation="vertical"
                android:layout_weight="0.65">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Emergency Contact Person"
                    android:gravity="center|left"
                    android:typeface="serif"
                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:paddingEnd="@dimen/_8sdp"
                android:orientation="horizontal"
                android:layout_weight="0.35">
                <TextView
                    android:id="@+id/user_emergency_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:typeface="serif"
                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_12sdp" />
                <EditText
                    android:id="@+id/emergency_name"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:maxLength="30"
                    android:gravity="center|right"
                    android:visibility="gone"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/lightblack"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingStart="@dimen/_8sdp"
                android:orientation="vertical"
                android:layout_weight="0.65">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Emergency Contact"
                    android:gravity="center|left"
                    android:typeface="serif"
                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:paddingEnd="@dimen/_8sdp"
                android:orientation="horizontal"
                android:layout_weight="0.35">
                <TextView
                    android:id="@+id/user_emergency_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:typeface="serif"
                    android:textColor="@color/lightblack"
                    android:textSize="@dimen/_12sdp" />
                <EditText
                    android:id="@+id/emergency_contact"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:maxLength="10"
                    android:gravity="center|right"
                    android:visibility="gone"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/lightblack"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>