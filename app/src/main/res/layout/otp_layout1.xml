<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_otp_health"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.universalsompo.meta.metaapp.utilities.CustomTextView
        android:id="@+id/tv_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/otp_text"
        android:textColor="@color/lightblack"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold"
        android:typeface="serif" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edttxt_bg_1"
        android:orientation="horizontal"
        android:weightSum="1">

        <EditText
            android:id="@+id/txt_otp1"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@+id/tv_text1"
            android:layout_weight=".65"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="OTP"
            android:fontFamily="@font/montserrat_regular"
            android:inputType="number"
            android:paddingStart="@dimen/_10sdp"
            android:textColor="@color/lightblack"
            android:textColorHint="@color/lightblack"
            android:textSize="@dimen/txt_size"
            android:typeface="serif" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@+id/tv_text"
            android:layout_weight=".35"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:background="@drawable/clock" />

            <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                android:id="@+id/otp_timer1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_40sdp"
                android:background="@null"
                android:gravity="center_vertical"
                android:inputType="number"
                android:paddingStart="@dimen/_10sdp"
                android:text="00:15"
                android:textColor="@color/lightblack"
                android:textColorHint="@color/lightblack"
                android:textSize="@dimen/txt_size"
                android:typeface="serif" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btn_verify1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_3sdp"
            android:layout_weight="1"
            android:background="@drawable/btn_bg1"
            android:text="Verify"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size"
            android:textStyle="bold"
            android:typeface="serif" />

        <Button
            android:id="@+id/btn_resend_otp1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_weight="1"
            android:background="@drawable/btn_bg1"
            android:text="Resend"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size"
            android:textStyle="bold"
            android:typeface="serif" />
    </LinearLayout>
</LinearLayout>