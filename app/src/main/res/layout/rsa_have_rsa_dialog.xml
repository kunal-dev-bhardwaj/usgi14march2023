<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/haveRsa_llayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/road_side_assistance"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="gone">

    <com.universalsompo.meta.metaapp.utilities.CustomTextView
        android:id="@+id/rsa_rc_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sdp" />

    <com.universalsompo.meta.metaapp.utilities.CustomTextView
        android:id="@+id/rsa_have_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/_10sdp"
        android:paddingStart="@dimen/_5sdp"
        android:paddingEnd="@dimen/_5sdp"
        android:text="Do you already have Roadside Assistance? "
        android:textColor="@color/white"
        android:textSize="@dimen/_16sdp" />


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/_10sdp"
        android:weightSum="1">

        <com.universalsompo.meta.metaapp.utilities.CustomTextView
            android:id="@+id/txt_yes"
            android:layout_width="0dp"
            android:layout_height="@dimen/_60sdp"
            android:layout_margin="@dimen/_10sdp"
            android:layout_weight="0.50"
            android:background="@drawable/rounded_green_stroke_with_transparent_bg"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />

        <com.universalsompo.meta.metaapp.utilities.CustomTextView
            android:id="@+id/txt_no"
            android:layout_width="0dp"
            android:layout_height="@dimen/_60sdp"
            android:layout_margin="@dimen/_10sdp"
            android:layout_weight="0.50"
            android:background="@drawable/rounded_green_stroke_with_transparent_bg"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />
    </LinearLayout>

</LinearLayout>