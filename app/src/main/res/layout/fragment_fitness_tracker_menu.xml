<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:weightSum="1"
    app:ignore="NamespaceTypo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_weight="0.5">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardUseCompatPadding="true"
            android:elevation="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:foreground="@drawable/round_outline"
                        android:adjustViewBounds="true"
                        android:src="@drawable/google_fit_banner" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:weightSum="1"
                    android:padding="@dimen/_4sdp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="center|left"
                        android:orientation="vertical">
                        <com.universalsompo.meta.metaapp.utilities.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Google Fit"
                            android:textSize="@dimen/_14sdp"
                            android:textColor="@color/lightblack"
                            android:typeface="serif"
                            android:layout_marginStart="@dimen/_8sdp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/connect_google_fit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.55"
                        android:gravity="right|center"
                        android:paddingEnd="@dimen/_8sdp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/connect_device_layout"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:gravity="center"
                            android:background="@drawable/rounded_corner_with_colorprimary"
                            android:orientation="vertical">
                            <com.universalsompo.meta.metaapp.utilities.CustomTextView
                                android:id="@+id/status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Connect"
                                android:textSize="@dimen/_10sdp"
                                android:textColor="@color/lightblack"
                                android:typeface="serif" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/_8sdp"
        android:paddingTop="@dimen/_4sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:paddingEnd="@dimen/_8sdp"
        android:layout_weight="0.5">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardUseCompatPadding="true"
            android:elevation="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:foreground="@drawable/round_outline"
                        android:adjustViewBounds="true"
                        android:src="@drawable/fitbit_banner" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:weightSum="1"
                    android:padding="@dimen/_4sdp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="center|left"
                        android:orientation="vertical">
                        <com.universalsompo.meta.metaapp.utilities.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fitbit"
                            android:textSize="@dimen/_14sdp"
                            android:textColor="@color/lightblack"
                            android:typeface="serif"
                            android:layout_marginStart="@dimen/_8sdp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/connect_fitbit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="right|center"
                        android:paddingEnd="@dimen/_8sdp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/fitbit_connect_layout"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:gravity="center"
                            android:background="@drawable/rounded_corner_with_colorprimary"
                            android:orientation="vertical">
                            <com.universalsompo.meta.metaapp.utilities.CustomTextView
                                android:id="@+id/fitbit_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Connect"
                                android:textSize="@dimen/_10sdp"
                                android:textColor="@color/lightblack"
                                android:typeface="serif"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

