<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_back_1"
    tools:context=".metaapp.motor.activities.SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer"
        android:orientation="vertical">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|top"
                android:paddingStart="@dimen/_30sdp"
                android:paddingEnd="@dimen/_30sdp"
                android:orientation="vertical">
                <ImageView
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/universal_logo" />

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="vertical">
                    <com.universalsompo.meta.metaapp.utilities.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:typeface="serif"
                        android:textColor="@color/lightblack"
                        android:textSize="@dimen/_18sdp"
                        android:text="Universal Sompo" />

                    <com.universalsompo.meta.metaapp.utilities.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:typeface="serif"
                        android:textColor="@color/lightblack"
                        android:textSize="@dimen/_14sdp"
                        android:text="General Insurance Co. Ltd." />

                    <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:typeface="serif"
                        android:textColor="@color/lightblack"
                        android:textSize="@dimen/_14sdp"
                        android:text="Suraksha, Hamesha Aapke Saath" />

                    <!--<com.usgi.meta.metaapp.utilities.CustomTextView
                        android:id="@+id/tSpalsh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_20sdp"
                        android:textStyle="bold"
                        android:typeface="serif" />

                    <com.usgi.meta.metaapp.utilities.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" | "
                        android:textColor="@color/white"
                        android:textSize="@dimen/_20sdp"
                        android:textStyle="bold"
                        android:typeface="serif"
                        android:visibility="gone" />

                    <com.usgi.meta.metaapp.utilities.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:text="Cars"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16sdp"
                        android:textStyle="bold"
                        android:typeface="serif"
                        android:visibility="gone" />-->
                </LinearLayout>
                <EditText
                    android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:id="@+id/register_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/montserrat_regular"
                    android:background="@drawable/edttxt_bg_1"
                    android:hint="@string/fullname"
                    android:inputType="text"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:textColor="@color/lightblack"
                    android:textColorHint="@color/lightblack"
                    android:textSize="@dimen/txt_size"
                    android:typeface="serif" />
                <EditText
                    android:id="@+id/register_email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:fontFamily="@font/montserrat_regular"
                    android:background="@drawable/edttxt_bg_1"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:textColor="@color/lightblack"
                    android:textColorHint="@color/lightblack"
                    android:textSize="@dimen/txt_size"
                    android:typeface="serif" />
                <LinearLayout
                    android:layout_marginTop="@dimen/_4sdp"
                    android:gravity="center|top"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/edttxt_bg_1"
                    android:orientation="horizontal">
                    <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingStart="@dimen/_6sdp"
                        android:text="+91"
                        android:textColor="@color/lightblack"
                        android:textSize="@dimen/txt_size" />
                    <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:background="@color/lightblack"
                        android:textSize="@dimen/txt_size" />
                    <EditText
                        android:id="@+id/register_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:hint="@string/phone"
                        android:inputType="phone"
                        android:fontFamily="@font/montserrat_regular"
                        android:maxLength="10"
                        android:paddingStart="4dp"
                        android:textColor="@color/lightblack"
                        android:textColorHint="@color/lightblack"
                        android:textSize="@dimen/txt_size" />
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:background="@drawable/edttxt_bg_1"
                    android:weightSum="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="0.15">
                        <EditText
                            android:focusableInTouchMode="false"
                            android:id="@+id/register_dob"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center|start"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/lightblack"
                            android:textColorHint="@color/lightblack"
                            android:textSize="@dimen/txt_size"
                            android:paddingStart="@dimen/_10sdp"
                            android:paddingEnd="@dimen/_10sdp"
                            android:background="@android:color/transparent"
                            android:hint="@string/dob"
                            android:importantForAutofill="no" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/date_picker_liner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.85"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:src="@drawable/calendar_icon"
                            android:id="@+id/img_calendar"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp" />
                    </LinearLayout>
                </LinearLayout>

                <com.universalsompo.meta.metaapp.utilities.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/gender"
                    android:textColor="@color/lightblack"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:textSize="@dimen/txt_size"/>

                <RadioGroup
                    android:id="@+id/gender_btn_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <RadioButton
                        android:id="@+id/btn_male"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@drawable/radio_flat_selector"
                        android:button="@android:color/transparent"
                        android:checked="true"
                        android:layout_weight="0.5"
                        android:text="@string/male_text"
                        android:textColor="@color/radio_flat_text_selector" />

                    <RadioButton
                        android:id="@+id/btn_female"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@drawable/radio_flat_selector"
                        android:button="@android:color/transparent"
                        android:text="@string/female_text"
                        android:layout_weight="0.5"
                        android:textColor="@color/radio_flat_text_selector" />

                </RadioGroup>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:buttonTint="@color/black"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:id="@+id/checkbox"
                        android:layout_width="25dp"
                        android:layout_height="25dp">
                    </CheckBox>

                    <LinearLayout
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="@dimen/_13sdp"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:fontFamily="@font/montserrat_regular"
                                android:text="I agree to "
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </TextView>
                            <TextView
                                android:visibility="visible"
                                android:textSize="@dimen/_13sdp"
                                android:fontFamily="@font/montserrat_semibold"
                                android:textColor="@color/colorPrimary"
                                android:text="Terms &amp; Condition"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            </TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:visibility="gone"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:textSize="12dp"
                                android:gravity="center"
                                android:fontFamily="@font/montserrat_regular"
                                android:textColor="@color/lightblack"
                                android:text="and "
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </TextView>
                            <TextView
                                android:textSize="12dp"
                                android:gravity="center"
                                android:id="@+id/term_service"
                                android:fontFamily="@font/montserrat_semibold"
                                android:textColor="@color/colorPrimary"
                                android:text="Terms of service"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            </TextView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/btn_register"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@drawable/btn_bg1"
                        android:text="@string/register"
                        android:textAllCaps="false"
                        android:textColor="@color/txt_color"
                        android:textSize="@dimen/txt_size"
                        android:textStyle="bold"
                        android:typeface="serif" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/login_liner"
                    android:gravity="end"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.universalsompo.meta.metaapp.utilities.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_11sdp"
                        android:typeface="serif"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Have already an account ? "
                        android:textColor="@color/black"/>

                    <com.universalsompo.meta.metaapp.utilities.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12sdp"
                        android:text="Login here"
                        android:typeface="serif"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textColor="@color/colorPrimary"/>
                </LinearLayout>


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">
        <com.universalsompo.meta.metaapp.utilities.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            android:text="Powered by META"
            android:textColor="@color/lightblack"/>
        <ImageView
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:src="@drawable/logo1"/>
    </LinearLayout>
</RelativeLayout>