<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="@dimen/_8sdp"
    android:background="@color/white"
    android:layout_height="match_parent">

    <com.universalsompo.meta.metaapp.utilities.CustomTextView1
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Measurement of ideal weight based on height."
        android:textSize="@dimen/_16sdp"
        android:typeface="serif"
        android:textColor="@color/lightblack"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_12sdp"
        android:gravity="center"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:orientation="vertical">
            <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.40"
                android:text="Height"
                android:gravity="center"
                android:textColor="@color/lightblack"
                android:textSize="@dimen/_12sdp"
                android:typeface="serif" />
        </LinearLayout>
        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/grey"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:visibility="visible"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/height_feet"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/linknew_edittext_bg"
                        android:gravity="bottom"
                        android:inputType="number"
                        android:hint="feet"
                        android:maxLength="1"
                        android:paddingBottom="@dimen/_2sdp"
                        android:paddingStart="@dimen/_2sdp"
                        android:textColor="@color/lightblack"
                        android:textSize="@dimen/_12sdp"
                        android:fontFamily="@font/montserrat_regular"
                        android:typeface="serif" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/height_inche"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/linknew_edittext_bg"
                        android:gravity="bottom"
                        android:inputType="number"
                        android:maxLength="2"
                        android:hint="inches"
                        android:paddingBottom="@dimen/_2sdp"
                        android:paddingStart="@dimen/_2sdp"
                        android:textColor="@color/lightblack"
                        android:textSize="@dimen/_12sdp"
                        android:fontFamily="@font/montserrat_regular"
                        android:typeface="serif" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/grey"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:orientation="vertical">
            <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.40"
                android:text="Weight"
                android:gravity="center"
                android:textColor="@color/lightblack"
                android:textSize="@dimen/_12sdp"
                android:typeface="serif" />
        </LinearLayout>
        <View
            android:id="@+id/view1"
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/grey"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp"
            android:orientation="vertical">
            <EditText
                android:id="@+id/weight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/linknew_edittext_bg"
                android:gravity="bottom"
                android:inputType="numberDecimal"
                android:maxLength="5"
                android:hint="kg"
                android:paddingBottom="@dimen/_2sdp"
                android:paddingStart="@dimen/_2sdp"
                android:textColor="@color/lightblack"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/montserrat_regular"
                android:typeface="serif" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_marginEnd="@dimen/_4sdp"
            android:orientation="vertical">
            <Button
                android:id="@+id/clear_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="CLEAR"
                android:typeface="serif"
                android:textStyle="bold"
                android:background="@color/lightish_grey"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/lightblack"
                android:layout_gravity="right"
                android:visibility="visible" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_marginStart="@dimen/_4sdp"
            android:orientation="vertical">
            <Button
                android:id="@+id/calculate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="CALCULATE"
                android:textSize="@dimen/_12sdp"
                android:typeface="serif"
                android:textStyle="bold"
                android:background="@color/my_policy_tab_dark"
                android:textColor="@color/white"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:visibility="gone"
        android:gravity="center"
        android:orientation="vertical">
        <com.universalsompo.meta.metaapp.utilities.CustomTextView1
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center"
            android:text="Result"
            android:textColor="@color/lightblack"
            android:textSize="@dimen/_16sdp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/circle_reminder">
                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:tint="@color/white"
                    android:src="@drawable/healthy_weight"/>
            </LinearLayout>
            <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                android:id="@+id/result_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/lightblack"
                android:layout_marginStart="@dimen/_4sdp"
                android:text="12"
                android:textSize="@dimen/_16sdp"
                android:typeface="serif" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>