<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginRight="@dimen/_15sdp"
    android:layout_marginLeft="@dimen/_15sdp"
    tools:context=".metaapp.health.fragment.buypolicy.super_healthcare.Super_Plan_details">
    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/llHeadRoundImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/universal_logo" />

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="vertical">
            <com.universalsompo.meta.metaapp.utilities.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:typeface="serif"
                android:textColor="@color/lightblack"
                android:textSize="@dimen/_18sdp"
                android:text="Universal Sompo" />

            <com.universalsompo.meta.metaapp.utilities.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:typeface="serif"
                android:textColor="@color/lightblack"
                android:textSize="@dimen/_14sdp"
                android:text="General Insurance Co. Ltd." />

            <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:typeface="serif"
                android:textColor="@color/lightblack"
                android:textSize="@dimen/_14sdp"
                android:text="Suraksha, Hamesha Aapke Saath" />

        </LinearLayout>
    </LinearLayout>

    <com.universalsompo.meta.metaapp.utilities.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_15sdp"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:text="Health Insurance"
        android:fontFamily="@font/montserrat_semibold"
        android:layout_marginBottom="@dimen/_10sdp"
        android:textColor="@color/colorPrimary"/>
    <ScrollView
         android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.universalsompo.meta.metaapp.utilities.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_18sdp"
                android:layout_gravity="center"
                android:text="Plan Details"
                android:fontFamily="@font/montserrat_semibold"
                android:layout_marginBottom="@dimen/_5sdp"
                android:textColor="@color/black"/>

            <View
                android:visibility="gone"
                android:background="@color/lightblack"
                android:layout_width="match_parent"
                android:layout_height="1dp">
            </View>

            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/white_grey"
                android:orientation="horizontal">

                <ImageView
                    android:src="@drawable/user_basic_info"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="wrap_content"
                    app:tint="@color/darker_gray">

                </ImageView>


                <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:background="@color/lightblack"
                    android:textSize="@dimen/txt_size" />

                <Spinner
                    android:id="@+id/family_floater_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/white_grey"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/calendar"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="wrap_content"
                    app:tint="@color/darker_gray">

                </ImageView>


                <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:background="@color/lightblack"
                    android:textSize="@dimen/txt_size" />


                <EditText
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:clickable="false"
                    android:id="@+id/edt_adult"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:paddingStart="15dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/lightblack"
                    android:textColorHint="@color/lightblack"
                    android:textSize="@dimen/txt_size" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/liner_no_child"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/white_grey"
                android:orientation="horizontal">

                <ImageView
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/occupation"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_20sdp"
                    app:tint="@color/darker_gray">

                </ImageView>


                <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:background="@color/lightblack"
                    android:textSize="@dimen/txt_size" />


                <Spinner
                    android:id="@+id/no_of_child_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/liner_no_parents"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/white_grey"
                android:orientation="horizontal">

                <ImageView
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/occupation"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_20sdp"
                    app:tint="@color/darker_gray">

                </ImageView>


                <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:background="@color/lightblack"
                    android:textSize="@dimen/txt_size" />


                <Spinner
                    android:id="@+id/no_of_parents_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>


            <com.universalsompo.meta.metaapp.utilities.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="center"
                android:text="Product Details"
                android:fontFamily="@font/montserrat_semibold"
                android:layout_marginBottom="@dimen/_5sdp"
                android:textColor="@color/black"/>

            <View
                android:background="@color/lightblack"
                android:layout_width="match_parent"
                android:layout_height="1dp">
            </View>

            <LinearLayout
                android:background="#cc0022"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingTop="@dimen/_10sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.universalsompo.meta.metaapp.utilities.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_15sdp"
                    android:gravity="center"
                    android:layout_gravity="start"
                    android:text="Super HealthCare Insurance"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:textColor="@color/white"/>

                <com.universalsompo.meta.metaapp.utilities.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_11sdp"
                    android:gravity="center"
                    android:layout_gravity="start"
                    android:text="Enhance your medical coverage with Super healthcare insurance"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:textColor="@color/white"/>
            </LinearLayout>
         <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@color/new_light_red"
                android:paddingBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.universalsompo.meta.metaapp.utilities.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_11sdp"
                    android:gravity="center"
                    android:paddingBottom="@dimen/_5sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:text="Benefits and Features with Universal Sompo"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:textColor="@color/black"/>
         </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@color/new_light_red"
                android:paddingBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.universalsompo.meta.metaapp.utilities.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_11sdp"
                    android:gravity="center"
                    android:paddingBottom="@dimen/_5sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:text="Entry age up to 80 years"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:textColor="@color/black"/>


                <View
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:background="@color/new_grey"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp">
                </View>
                <com.universalsompo.meta.metaapp.utilities.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_11sdp"
                    android:gravity="center"
                    android:paddingBottom="@dimen/_5sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:text="Scope of reduced waiting period"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:textColor="@color/black"/>

                <View
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:background="@color/new_grey"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp">
                </View>

                <com.universalsompo.meta.metaapp.utilities.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_11sdp"
                    android:gravity="center"
                    android:paddingBottom="@dimen/_5sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:text="Organ Transplant, More..."
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:textColor="@color/black"/>

                <View
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:background="@color/new_grey"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp">
                </View>
            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="@dimen/_30sdp"
                android:background="#cc0022"
                android:paddingBottom="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:paddingStart="@dimen/_5sdp"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/white"
                        android:text="Deductible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                    <LinearLayout
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@drawable/rectangle_white"
                        android:orientation="horizontal">

                        <EditText
                            android:paddingStart="@dimen/_15sdp"
                            android:textSize="@dimen/_12sdp"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/black"
                            android:id="@+id/deductible_spinner"
                            android:background="@null"
                            android:clickable="false"
                            android:focusable="false"
                            android:cursorVisible="false"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        </EditText>

                        <ImageView
                            android:id="@+id/policyTypeDropDown"
                            android:layout_gravity="center"
                            android:src="@drawable/spinner_drop_down"
                            android:layout_weight="3.5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:tint="@color/black">

                        </ImageView>


                        <Spinner
                            android:visibility="gone"
                            android:backgroundTint="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/_12sdp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:paddingStart="@dimen/_5sdp"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/white"
                        android:text="Sum Insured"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                    <LinearLayout
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@drawable/rectangle_white"
                        android:orientation="horizontal">
                        <Spinner
                            android:backgroundTint="@color/black"
                            android:id="@+id/sum_insured_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/_12sdp" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="0.2"
                        android:paddingStart="@dimen/_5sdp"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/white"
                        android:text="Premium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                    <TextView
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/white"
                        android:text="₹"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                        android:id="@+id/premium_amount"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>

                <Button
                    android:id="@+id/buy_now_super"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:layout_gravity="center"
                    android:textAllCaps="false"
                    android:layout_weight="2"
                    android:textColor="@color/white"
                    android:text="Buy Now"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_10sdp"
                    android:background="@drawable/green_btn_new"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_30sdp">


                </Button>



            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>