<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_8sdp"
        android:background="@color/white">
        <TextView
            android:id="@+id/month_year_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:textStyle="bold"
            android:textSize="@dimen/_10sdp"
            android:typeface="serif"
            android:textColor="@color/lightblack"/>
    </LinearLayout>

    <devs.mulham.horizontalcalendar.HorizontalCalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:sizeTopText="@dimen/_10sdp"
        app:sizeBottomText="@dimen/_10sdp"
        app:sizeMiddleText="@dimen/_14sdp"
        app:textColorNormal="@color/black"
        app:colorBottomTextSelected="@color/colorPrimaryDark"
        app:colorMiddleTextSelected="@color/colorPrimaryDark"
        app:colorTopTextSelected="@color/colorPrimaryDark"
        app:textColorSelected="@color/colorPrimaryDark"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:orientation="horizontal"
        android:weightSum="5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/running_layout"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/circle_reminder">
                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:tint="@color/white"
                    android:src="@drawable/running"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/running_layout1"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                android:background="@drawable/circle_reminder_not_set">
                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:tint="@color/lightblack"
                    android:src="@drawable/running"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Running"
                android:textSize="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:typeface="serif"
                android:textColor="@color/lightblack"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/cycling_layout1"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/circle_reminder_not_set">
                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:tint="@color/lightblack"
                    android:src="@drawable/cycling"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/cycling_layout"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                android:background="@drawable/circle_reminder">
                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:tint="@color/white"
                    android:src="@drawable/cycling"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cycling"
                android:textSize="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:typeface="serif"
                android:textColor="@color/lightblack"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/swimming_layout1"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/circle_reminder_not_set">
                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:tint="@color/lightblack"
                    android:src="@drawable/swimminglog"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/swimming_layout"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                android:background="@drawable/circle_reminder">
                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:tint="@color/white"
                    android:src="@drawable/swimminglog"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Swimming"
                android:textSize="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:typeface="serif"
                android:textColor="@color/lightblack"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/yoga_layout1"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/circle_reminder_not_set">
                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:tint="@color/lightblack"
                    android:src="@drawable/yogalog"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/yoga_layout"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                android:background="@drawable/circle_reminder">
                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:tint="@color/white"
                    android:src="@drawable/yogalog"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yoga"
                android:textSize="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:typeface="serif"
                android:textColor="@color/lightblack"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/workout_layout1"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/circle_reminder_not_set">
                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:tint="@color/lightblack"
                    android:src="@drawable/workoutlog"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/workout_layout"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                android:background="@drawable/circle_reminder">
                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:tint="@color/white"
                    android:src="@drawable/workoutlog"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Workout"
                android:textSize="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:typeface="serif"
                android:textColor="@color/lightblack"/>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/log_activity_container1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" />
</LinearLayout>