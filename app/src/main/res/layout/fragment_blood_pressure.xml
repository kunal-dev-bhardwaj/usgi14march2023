<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:scrollbars="none">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/_8sdp"
        android:paddingStart="@dimen/_8sdp"
        android:paddingEnd="@dimen/_8sdp"
        android:paddingBottom="@dimen/_25sdp"
        android:gravity="center|top">

        <com.universalsompo.meta.metaapp.utilities.CustomTextView1
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blood pressure calculator is used to tell whether users blood pressure is low, normal or high."
            android:textSize="@dimen/_16sdp"
            android:typeface="serif"
            android:textColor="@color/lightblack"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:orientation="vertical">
                    <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.40"
                        android:text="Systolic"
                        android:gravity="center"
                        android:textColor="@color/lightblack"
                        android:textSize="@dimen/_12sdp"
                        android:typeface="serif" />
                </LinearLayout>
                <View
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="match_parent"
                    android:background="@color/grey"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/end_systolic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/linknew_edittext_bg"
                        android:gravity="bottom"
                        android:inputType="number"
                        android:hint="mm Hg"
                        android:fontFamily="@font/montserrat_regular"
                        android:maxLength="3"
                        android:paddingBottom="@dimen/_2sdp"
                        android:paddingStart="@dimen/_10sdp"
                        android:textColor="@color/lightblack"
                        android:textSize="@dimen/_12sdp"
                        android:typeface="serif" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/grey"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:orientation="vertical">
                    <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.40"
                        android:text="Diastolic"
                        android:gravity="center"
                        android:textColor="@color/lightblack"
                        android:textSize="@dimen/_12sdp"
                        android:typeface="serif" />
                </LinearLayout>
                <View
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="match_parent"
                    android:background="@color/grey"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/end_diastolic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/linknew_edittext_bg"
                        android:gravity="bottom"
                        android:inputType="number"
                        android:hint="mm Hg"
                        android:maxLength="3"
                        android:fontFamily="@font/montserrat_regular"
                        android:paddingBottom="@dimen/_2sdp"
                        android:paddingStart="@dimen/_10sdp"
                        android:textColor="@color/lightblack"
                        android:textSize="@dimen/_12sdp"
                        android:typeface="serif" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/grey"
                android:visibility="gone"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:gravity="center"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:orientation="vertical">
                    <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.40"
                        android:text="Heart Rate"
                        android:gravity="center"
                        android:textColor="@color/lightblack"
                        android:textSize="@dimen/_12sdp"
                        android:typeface="serif" />
                </LinearLayout>
                <View
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="match_parent"
                    android:background="@color/grey"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:orientation="vertical">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/linknew_edittext_bg"
                        android:gravity="bottom"
                        android:inputType="number"
                        android:hint="in (bpm)"
                        android:fontFamily="@font/montserrat_regular"
                        android:paddingBottom="@dimen/_2sdp"
                        android:paddingStart="@dimen/_10sdp"
                        android:textColor="@color/lightblack"
                        android:textSize="@dimen/_12sdp"
                        android:typeface="serif" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/grey"
                android:visibility="gone"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:gravity="center"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:orientation="vertical">
                    <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.40"
                        android:text="Radius of Vessel"
                        android:gravity="center"
                        android:textColor="@color/lightblack"
                        android:textSize="@dimen/_12sdp"
                        android:typeface="serif" />
                </LinearLayout>
                <View
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="match_parent"
                    android:background="@color/grey"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:orientation="vertical">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/linknew_edittext_bg"
                        android:gravity="bottom"
                        android:inputType="number"
                        android:hint="in (mm)"
                        android:fontFamily="@font/montserrat_regular"
                        android:paddingBottom="@dimen/_2sdp"
                        android:paddingStart="@dimen/_10sdp"
                        android:textColor="@color/lightblack"
                        android:textSize="@dimen/_12sdp"
                        android:typeface="serif" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_marginEnd="@dimen/_4sdp"
                android:orientation="vertical">
                <Button
                    android:id="@+id/clear_data"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="CLEAR"
                    android:typeface="serif"
                    android:textStyle="bold"
                    android:background="@color/lightish_grey"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/lightblack"
                    android:layout_gravity="right"
                    android:visibility="visible" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_marginStart="@dimen/_4sdp"
                android:orientation="vertical">
                <Button
                    android:id="@+id/calculate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="CALCULATE"
                    android:textSize="@dimen/_12sdp"
                    android:typeface="serif"
                    android:textStyle="bold"
                    android:background="@color/my_policy_tab_dark"
                    android:textColor="@color/white"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:visibility="gone"
            android:gravity="center|top"
            android:orientation="vertical">
            <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Result"
                android:textColor="@color/lightblack"
                android:textSize="@dimen/_20sdp"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:weightSum="4">

                <LinearLayout
                    android:id="@+id/ll_result_blue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">

                    <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                        android:id="@+id/tv_result_value_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:textColor="@color/color_skyblue"
                        android:textSize="@dimen/_11sdp" />

                    <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                        android:id="@+id/tv_result_type_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="(Low)"
                        android:textColor="@color/lightblack"
                        android:textSize="@dimen/_11sdp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_result_green"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="invisible">

                    <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                        android:id="@+id/tv_result_value_green"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:textColor="@color/color_green"
                        android:textSize="@dimen/_11sdp" />

                    <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                        android:id="@+id/tv_result_type_green"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="(Normal)"
                        android:textColor="@color/lightblack"
                        android:textSize="@dimen/_11sdp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_result_orange"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="invisible">

                    <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                        android:id="@+id/tv_result_value_orange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:textColor="@color/color_orange"
                        android:textSize="@dimen/_11sdp" />

                    <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                        android:id="@+id/tv_result_type_orange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="(pre-Hypertension)"
                        android:textColor="@color/lightblack"
                        android:textSize="@dimen/_11sdp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_reult_red"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="invisible">

                    <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                        android:id="@+id/tv_result_value_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.87"
                        android:textColor="@color/color_red"
                        android:textSize="@dimen/_11sdp" />

                    <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                        android:id="@+id/tv_result_type_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(Hypertension)"
                        android:textColor="@color/lightblack"
                        android:textSize="@dimen/_11sdp" />
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <ImageView
                    android:id="@+id/img_drop_low"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_weight="1"
                    android:src="@drawable/blue_drop_down" />

                <ImageView
                    android:id="@+id/img_drop_low_risk"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_weight="1"
                    android:src="@drawable/green_drop_down"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/img_drop_medium_risk"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_weight="1"
                    android:src="@drawable/orange_drop_down"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/img_drop_high_risk"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_weight="1"
                    android:src="@drawable/red_drop_down"
                    android:visibility="invisible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/color_skyblue" />

                <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/color_green" />

                <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/color_orange" />

                <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/color_red" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@color/white">
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*">
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/_5sdp"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_5sdp"
                        android:padding="@dimen/_5sdp">
                        <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/lightblack"
                            android:text="Low" />
                        <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                            android:layout_width="wrap_content"
                            android:textColor="@color/lightblack"
                            android:layout_height="wrap_content"
                            android:text="less than 120/80 mm Hg" />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/_5sdp"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_5sdp"
                        android:padding="@dimen/_5sdp">
                        <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/lightblack"
                            android:text="Normal" />
                        <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/lightblack"
                            android:text="120/80 mm Hg" />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/_5sdp"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_5sdp"
                        android:padding="@dimen/_5sdp">
                        <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/lightblack"
                            android:text="Pre-hypertension" />
                        <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/lightblack"
                            android:text="140/90 mm Hg" />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/_5sdp"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_5sdp"
                        android:padding="@dimen/_5sdp">
                        <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/lightblack"
                            android:text="Hypertension" />
                        <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/lightblack"
                            android:text="Above 140/90 mm Hg" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>

            <com.universalsompo.meta.metaapp.utilities.CustomTextView1
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:layout_marginTop="@dimen/_8sdp"
                android:textStyle="bold"
                android:text="Source: World Health Organisation"
                android:textColor="@color/lightblack"
                android:textSize="@dimen/_10sdp"
                android:typeface="serif" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>