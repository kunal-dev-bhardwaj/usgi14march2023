<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_250sdp"
    android:background="@drawable/rounded_corner_white_sos"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40sdp"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_12sdp">

        <com.universalsompo.meta.metaapp.utilities.CustomTextView
            android:id="@+id/error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_1sdp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center_horizontal"
            android:text="Edit Member Details"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/KnowMoreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_4sdp"
            android:gravity="center"
            android:text="Let’s know what you want to do"
            android:textColor="#02203C"
            android:textSize="12dp"
            android:typeface="serif" />

        <com.universalsompo.meta.metaapp.utilities.CustomTextView
            android:id="@+id/alert_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_1sdp"
            android:gravity="start"
            android:text="Your application has been forwarded to our underwriting department for further evaluation, our customer service representative will call you shortly. You can also get in touch with us at 1800 22 4030 / 1800 200 4030 Thank you for your interest in our Complete Healthcare Insurance policy’"
            android:textColor="@color/lightblack"
            android:textSize="10dp"
            android:typeface="serif"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/AddMemberRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_2sdp"
                android:text="Add Member"
                android:textSize="12dp">

            </RadioButton>

            <RadioButton
                android:id="@+id/DeleteMemberRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_2sdp"
                android:text="Delete Member"
                android:textSize="12dp">

            </RadioButton>
        </LinearLayout>


        <LinearLayout
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="@drawable/red_btn_bg"
            android:orientation="vertical">

            <com.universalsompo.meta.metaapp.utilities.CustomTextView
                android:id="@+id/ok_dialog"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Proceed"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp"
                android:typeface="serif" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/cutImgNSTP"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_4sdp"
        android:src="@drawable/ic_close_btn_dilog">

    </ImageView>
    <RelativeLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:visibility="visible"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:gravity="center"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_7sdp"
            android:src="@drawable/member_details" />
    </RelativeLayout>
</RelativeLayout>