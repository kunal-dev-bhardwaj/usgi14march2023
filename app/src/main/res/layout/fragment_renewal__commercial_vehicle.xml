<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginRight="@dimen/_5sdp"
    android:layout_marginLeft="@dimen/_5sdp"
    tools:context=".metaapp.motor.activities.motor_renewal.Renewal_Commercial_vehicle">

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="@dimen/_20sdp"
                android:background="#9DAFC1"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingTop="@dimen/_10sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.universalsompo.meta.metaapp.utilities.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_15sdp"
                    android:gravity="center"
                    android:layout_gravity="start"
                    android:text="Commercial vehicle"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:textColor="@color/black"/>

                <com.universalsompo.meta.metaapp.utilities.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_11sdp"
                    android:gravity="center"
                    android:layout_gravity="start"
                    android:text="(Comprehensive Package and Third Party Liability Policies)"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:textColor="@color/lightblack"/>
            </LinearLayout>
            <LinearLayout
                android:background="#CAD5E0"
                android:paddingBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/red_circle_renew"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:src="@drawable/truck"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_45sdp"
                        app:tint="@color/white">
                    </ImageView>
                </RelativeLayout>



                <com.universalsompo.meta.metaapp.utilities.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_11sdp"
                    android:gravity="center"
                    android:paddingTop="@dimen/_2sdp"
                    android:layout_gravity="start"
                    android:text="Benefits and Features with USGI"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:background="#CAD5E0"
                android:paddingBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.universalsompo.meta.metaapp.utilities.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_11sdp"
                    android:gravity="center"
                    android:paddingBottom="@dimen/_5sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:text="Comprehensive Cover"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:textColor="@color/black"/>


                <View
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:background="@color/new_grey"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp">
                </View>
                <com.universalsompo.meta.metaapp.utilities.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_11sdp"
                    android:gravity="center"
                    android:paddingBottom="@dimen/_5sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:text="Third Party Cover"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:textColor="@color/black"/>

                <View
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:background="@color/new_grey"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp">
                </View>


            </LinearLayout>

            <LinearLayout

                android:background="#9DAFC1"
                android:paddingBottom="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/policy_number"
                    android:layout_gravity="center"
                    android:paddingStart="@dimen/_5sdp"
                    android:inputType="text"
                    android:textSize="@dimen/_10sdp"
                    android:hint="Enter Policy Number"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/rectangle_white"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_33sdp">
                </EditText>

                <Button
                    android:id="@+id/renew_btn"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:layout_gravity="center"
                    android:textAllCaps="false"
                    android:layout_weight="2"
                    android:textColor="@color/white"
                    android:text="Renew Now"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:textSize="@dimen/_10sdp"
                    android:background="@drawable/green_btn_new"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp">


                </Button>



            </LinearLayout>
        </LinearLayout>

    </ScrollView>




</LinearLayout>