<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_10sdp"
    tools:context=".metaapp.motor.activities.motor_policies.PostPaymentFailure">


    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginBottom="@dimen/_10sdp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="@dimen/_10sdp"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/black"
            android:text="Uh-oh! Something went wrong with your payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:fontFamily="@font/montserrat_semibold"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/black"
            android:text="Please try again and make sure your payment information is correct."
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/black"
            android:text="If you still have trouble, connect with us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>

        <LinearLayout
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/red_btn_bg"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp">


                <TextView
                    android:id="@+id/TryAgainText"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="Try Again"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </TextView>


            </LinearLayout>
            <LinearLayout
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/grey_tab_bg"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp">
                <TextView
                    android:id="@+id/backToHomeTxt"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/red_new"
                    android:textSize="@dimen/_10sdp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="Back to home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </TextView>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/sky_new_blue"
                android:text="or"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/sky_new_blue"
                android:text="Please Contact Us On 1800 1800 23 "
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>