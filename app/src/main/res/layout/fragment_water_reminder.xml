<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/first_layout"
        android:padding="@dimen/_5sdp"
        android:background="@color/light_grey"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/water_time_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:src="@drawable/water_time_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/water_between_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:text="Between"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_12sdp"
            android:typeface="serif"
            app:layout_constraintLeft_toRightOf="@+id/water_time_icon"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/water_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:text="9:30 AM"
            android:textColor="@color/blue"
            android:textSize="@dimen/_12sdp"
            android:typeface="serif"
            app:layout_constraintLeft_toRightOf="@+id/water_between_text"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/water_and_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:text="And"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_12sdp"
            android:typeface="serif"
            app:layout_constraintLeft_toRightOf="@+id/water_start_time"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:layout_marginEnd="@dimen/_15sdp"
            android:id="@+id/water_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:text="9:30 PM"
            android:textColor="@color/blue"
            android:textSize="@dimen/_12sdp"
            android:typeface="serif"
            app:layout_constraintLeft_toRightOf="@+id/water_and_text"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>



