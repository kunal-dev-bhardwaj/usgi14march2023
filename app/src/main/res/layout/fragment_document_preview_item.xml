<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_200sdp"
    android:layout_height="@dimen/_220sdp"
    android:gravity="center">

    <ImageView
        android:id="@+id/img_doc"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_140sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:scaleType="fitXY"
        android:src="@drawable/loading" />

    <LinearLayout
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_alignBottom="@+id/img_doc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/text_bg"
        android:gravity="center"
        android:orientation="vertical">

        <com.universalsompo.meta.metaapp.utilities.CustomTextView
            android:id="@+id/txt_doctype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp"
            android:typeface="serif" />

        <com.universalsompo.meta.metaapp.utilities.CustomTextView
            android:id="@+id/exp_date_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Exp date: 20/12/2017"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="@dimen/_9sdp" />

    </LinearLayout>

    <ImageView
        android:visibility="gone"
        android:id="@+id/img_del_doc"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_110sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/remove_doc_icon"/>

    <LinearLayout
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_110sdp"
        android:layout_marginTop="@dimen/_5sdp">

        <ImageView
            android:id="@+id/img_share_doc"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/share_medical_info"/>

    </LinearLayout>

</RelativeLayout>
