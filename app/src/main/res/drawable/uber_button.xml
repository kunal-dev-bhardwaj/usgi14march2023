<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#7A7373" />
            <corners android:topLeftRadius="@dimen/_40sdp"
                android:topRightRadius="@dimen/_40sdp"
                android:bottomRightRadius="@dimen/_40sdp"
                android:bottomLeftRadius="@dimen/_40sdp" />
            <!--shadow Color-->
        </shape>
    </item>

    <item
        android:left="@dimen/_3sdp"
        android:right="@dimen/_3sdp"
        android:top="@dimen/_3sdp"
        android:bottom="@dimen/_3sdp">
        <shape android:shape="rectangle">
            <solid android:color="@color/black"/>
            <corners android:topLeftRadius="@dimen/_40sdp"
                android:topRightRadius="@dimen/_40sdp"
                android:bottomRightRadius="@dimen/_40sdp"
                android:bottomLeftRadius="@dimen/_40sdp" />
        </shape>
    </item>
</layer-list>